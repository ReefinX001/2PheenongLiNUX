{
  "name": "utrust-2700r-card-reader-service",
  "version": "1.0.0",
  "description": "uTrust 2700 R Smart Card Reader Service for Thai ID Card reading",
  "main": "src/server.js",
  "keywords": [
    "smart-card",
    "thai-id",
    "utrust-2700r",
    "card-reader",
    "pos",
    "installment"
  ],
  "author": "2 Pheenong Mobile Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/utrust-2700r-reader.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "service": "node src/server.js --service",
    "setup": "node scripts/setup.js",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js",
    "start-service": "node scripts/start-service.js",
    "stop-service": "node scripts/stop-service.js",
    "restart-service": "node scripts/restart-service.js",
    "service-status": "node scripts/service-status.js",
    "restart": "npm run stop && npm run start",
    "stop": "taskkill /f /im node.exe /t",
    "build": "pkg src/server.js --targets node18-win-x64 --output dist/card-reader-service.exe",
    "clean": "rimraf logs/* temp/*",
    "health-check": "node scripts/health-check.js"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.0.0",
    "iconv-lite": "^0.6.3",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "node-schedule": "^2.1.1",
    "node-windows": "^1.0.0-beta.8",
    "pcsclite": "^1.0.1",
    "pm2": "^5.3.0",
    "smartcard": "^1.0.46",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "os": [
    "win32"
  ],
  "cpu": [
    "x64"
  ],
  "preferGlobal": false,
  "private": true
}
