{
  "service": {
    "name": "uTrust-2700R-CardReader-Service",
    "displayName": "uTrust 2700 R Smart Card Reader Service",
    "description": "Service for reading Thai ID cards using uTrust 2700 R Smart Card Reader",
    "port": 3999,
    "host": "localhost",
    "cors": {
      "origin": [
        "http://localhost:3000",
        "http://localhost:8080",
        "http://100.110.180.13:3000",
        "http://100.110.180.13:8080",
        "http://100.106.108.57:3000",
        "http://100.106.108.57:8080"
      ],
      "credentials": true,
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedHeaders": ["Content-Type", "Authorization", "X-Requested-With"]
    }
  },
  "cardReader": {
    "model": "uTrust 2700 R",
    "manufacturer": "Identiv",
    "timeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "autoConnect": true,
    "supportedCards": [
      "Thai National ID Card",
      "Government Officer Card",
      "State Enterprise Card"
    ]
  },
  "network": {
    "tailscale": {
      "enabled": true,
      "serverIP": "100.110.180.13",
      "clientNetworkRange": "100.106.108.0/24"
    },
    "security": {
      "enableHTTPS": false,
      "allowedIPs": [
        "127.0.0.1",
        "localhost",
        "100.110.180.13",
        "100.106.108.57",
        "100.106.108.58",
        "100.106.108.59",
        "100.106.108.60"
      ],
      "rateLimiting": {
        "enabled": true,
        "maxRequests": 100,
        "windowMs": 900000,
        "message": "Too many requests from this IP"
      }
    }
  },
  "logging": {
    "level": "info",
    "file": {
      "enabled": true,
      "maxSize": "10m",
      "maxFiles": "14d",
      "datePattern": "YYYY-MM-DD"
    },
    "console": {
      "enabled": true,
      "colorize": true
    }
  },
  "monitoring": {
    "healthCheck": {
      "enabled": true,
      "interval": 30000
    },
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics"
    }
  },
  "features": {
    "cacheTFTD": false,
    "validateChecksum": true,
    "autoReconnect": true,
    "backgroundService": true
  }
} 