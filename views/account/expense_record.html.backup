<script>
  // JavaScript code for handling modals and other interactive elements
  document.addEventListener('DOMContentLoaded', function () {
    try {
      const pageLoaderId = LoadingSystem.show({
        message: 'กำลังโหลดหน้าเว็บ...',
        showProgress: true,
        autoProgress: true,
        spinnerType: 'default'
      });
  
      } catch (error) {
        console.error('Page loading error:', error);
      } finally {
        LoadingSystem.completeProgress();
      }
  
      try {
      // Clone the main menu from the template
      const menuTemplate = document.getElementById('mainMenuTemplate');
      const menuContainer = document.getElementById('mainMenuContainer');
  
      if (menuTemplate && menuContainer) {
        const menuClone = menuTemplate.content.cloneNode(true);
        menuContainer.appendChild(menuClone);
      }
  
      // Show/Hide Bank Check fields based on payment type selection
      const paymentTypeRadios = document.querySelectorAll('input[name="paymentType"]');
      const bankCheckFields = document.getElementById('bankCheckFields');
  
      if (paymentTypeRadios.length && bankCheckFields) {
        paymentTypeRadios.forEach(radio => {
          radio.addEventListener('change', function() {
            if (this.value === 'check') {
              bankCheckFields.classList.remove('hidden');
            } else {
              bankCheckFields.classList.add('hidden');
            }
          });
        });
      }
  
      // Date picker functionality
      const datePickerTrigger = document.getElementById('datePickerTrigger');
      const datePickerMenu = document.getElementById('datePickerMenu');
      const cancelDatePicker = document.getElementById('cancelDatePicker');
      const applyDatePicker = document.getElementById('applyDatePicker');
      const startDate = document.getElementById('startDate');
      const endDate = document.getElementById('endDate');
      const selectedDateRange = document.getElementById('selectedDateRange');
  
      // Initialize date picker with default values
      if (datePickerTrigger && datePickerMenu) {
        datePickerTrigger.addEventListener('click', function() {
          datePickerMenu.classList.toggle('hidden');
        });
  
        // Close when clicking outside the picker
        document.addEventListener('click', function(e) {
          if (!datePickerMenu.contains(e.target) &&
              !datePickerTrigger.contains(e.target) &&
              !datePickerMenu.classList.contains('hidden')) {
            datePickerMenu.classList.add('hidden');
          }
        });
  
        // Cancel button
        if (cancelDatePicker) {
          cancelDatePicker.addEventListener('click', function() {
            datePickerMenu.classList.add('hidden');
          });
        }
  
        // Apply button
        if (applyDatePicker && startDate && endDate && selectedDateRange) {
          applyDatePicker.addEventListener('click', function () {
            const start = new Date(startDate.value);
            const end = new Date(endDate.value);

            // Format dates in Thai style: DD/MM/YYYY
            const formatThaiDate = date => {
              const d = date.getDate().toString().padStart(2, '0');
              const m = (date.getMonth() + 1).toString().padStart(2, '0');
              const y = date.getFullYear() + 543; // Convert to Buddhist Era
              return `${d}/${m}/${y}`;
            };

            selectedDateRange.textContent = `${formatThaiDate(start)} - ${formatThaiDate(end)}`;
            datePickerMenu.classList.add('hidden');

            // Here you would normally trigger a reload of expense data based on new date range
            // loadExpenses(startDate.value, endDate.value);
          });
        }
      }
  
      // Toggle dark/light mode
      const btnToggleDark = document.getElementById('btnToggleDark');
      const themeIcon = document.getElementById('themeIcon');
      const darkModeLabel = document.getElementById('darkModeLabel');
  
      if (btnToggleDark && themeIcon && darkModeLabel) {
        // Check for saved theme preference or respect OS preference
        if (localStorage.theme === 'dark' ||
            (!('theme' in localStorage) &&
             window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark');
          themeIcon.classList.remove('bi-moon-stars-fill');
          themeIcon.classList.add('bi-sun-fill');
          darkModeLabel.textContent = 'Light Mode';
        } else {
          document.documentElement.classList.remove('dark');
          themeIcon.classList.remove('bi-sun-fill');
          themeIcon.classList.add('bi-moon-stars-fill');
          darkModeLabel.textContent = 'Dark Mode';
        }
  
        btnToggleDark.addEventListener('click', function() {
          if (document.documentElement.classList.contains('dark')) {
            document.documentElement.classList.remove('dark');
            localStorage.theme = 'light';
            themeIcon.classList.remove('bi-sun-fill');
            themeIcon.classList.add('bi-moon-stars-fill');
            darkModeLabel.textContent = 'Dark Mode';
          } else {
            document.documentElement.classList.add('dark');
            localStorage.theme = 'dark';
            themeIcon.classList.remove('bi-moon-stars-fill');
            themeIcon.classList.add('bi-sun-fill');
            darkModeLabel.textContent = 'Light Mode';
          }
        });
      }
  
      // Add supplier dropdown functionality
      const supplierName = document.getElementById('supplierName');
      const supplierDropdown = document.getElementById('supplierDropdown');
  
      if (supplierName && supplierDropdown) {
        supplierName.addEventListener('focus', function() {
          supplierDropdown.classList.remove('hidden');
        });
  
        document.addEventListener('click', function(e) {
          if (!supplierName.contains(e.target) && !supplierDropdown.contains(e.target)) {
            supplierDropdown.classList.add('hidden');
          }
        });
      }
    } catch (error) {
      console.error('Initialization error:', error);
    }
    });
</script>

