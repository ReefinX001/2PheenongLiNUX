  <script>
    // ผูกอีเวนต์กับปุ่ม logout
    const btnLogout = document.getElementById('btnLogout');
    if (btnLogout) {
      btnLogout.addEventListener('click', function() {
        localStorage.removeItem('authToken');
        localStorage.removeItem('userName');
        localStorage.removeItem('userPhoto');
        localStorage.removeItem('userInfo');
        showLoadingAndRedirect('login.html');
      });
    }

    // เชื่อมต่อ Socket.IO
    let socket;
    try {
      if (typeof io !== 'undefined') {
        socket = io();
        socket.on('connect', () => {
          console.log('Socket.IO connected (PO Page).');
        });
        socket.on('disconnect', () => {
          console.warn('Socket.IO disconnected.');
        });
        // ตัวอย่าง event
        socket.on('poUpdate', (payload) => {
          console.log('Realtime PO update:', payload);
          // ถ้าต้องการ refresh: loadPO();
        });
      } else {
        console.warn('Socket.IO not available');
      }
    } catch(e) {
      console.error('Socket.IO connection failed:', e);
    }

    // สำหรับการแสดง/ซ่อน loading
    function showLoading() {
      document.getElementById('tableLoading').classList.remove('hidden');
    }
    
    function hideLoading() {
      document.getElementById('tableLoading').classList.add('hidden');
    }

    document.addEventListener('DOMContentLoaded', async () => {
      // 0) โหลดข้อมูลผู้ใช้
      loadUserProfile();
      // 1) โหลดรายการสาขา
      await loadBranches();
      // 2) โหลด PO
      loadPO();

      // เมื่อเปลี่ยนโหมด (pending / history / all)
      document.getElementById('selectMode').addEventListener('change', loadPO);
      // เมื่อเปลี่ยนสาขา
      document.getElementById('branchSelect').addEventListener('change', loadPO);
      // เมื่อกดปุ่มค้นหา
      document.getElementById('btnFilter').addEventListener('click', loadPO);
    });
    
    // โหลดข้อมูลผู้ใช้จาก API
    async function loadUserProfile() {
      try {
        const token = localStorage.getItem('authToken');

        // ตรวจสอบว่ามี token หรือไม่
        if (!token) {
          console.error('❌ No auth token found');
          alert('ไม่พบข้อมูลการเข้าสู่ระบบ กรุณา login ใหม่');
          showLoadingAndRedirect('/login.html');
          return;
        }

        console.log('🔍 Fetching user profile from API...');

        const res = await fetch('/api/users/me', {
          method: 'GET',
          headers: {
            'Authorization': 'Bearer ' + token,
            'Cache-Control': 'no-cache' // บังคับไม่ใช้ cache
          }
        });

        const json = await res.json();
        console.log('📦 API Response:', json);

        // ตรวจสอบ response status
        if (!res.ok) {
          console.error('❌ API Error:', res.status, json);

          // ถ้า token หมดอายุหรือไม่ถูกต้อง
          if (res.status === 401 || res.status === 403) {
            console.log('🚫 Unauthorized - clearing cache and redirecting');
            localStorage.removeItem('authToken');
            localStorage.removeItem('userName');
            localStorage.removeItem('userPhoto');
            localStorage.removeItem('userInfo');
            alert('เซสชันหมดอายุ กรุณาเข้าสู่ระบบใหม่');
            showLoadingAndRedirect('/login.html');
            return;
          }

          throw new Error(json.error || json.message || 'Failed to load profile');
        }

        if (!json.success || !json.data) {
          throw new Error('Invalid response from server');
        }

        // ดึงข้อมูลจาก response
        const userName = json.data.name || json.data.username || 'ผู้ใช้';
        const photoUrl = json.data.photoUrl || json.data.employee?.imageUrl || null;

        console.log('✅ User Profile Loaded:', { userName, photoUrl });

        // อัพเดท UI
        const nameEl = document.getElementById('employeeName');
        const photoEl = document.getElementById('employeePhoto');

        if (nameEl) {
          nameEl.textContent = userName;
          console.log('✅ Updated employeeName to:', userName);
        }

        if (photoEl) {
          if (photoUrl) {
            // แปลง photoUrl ให้ถูกต้อง
            let finalPhotoUrl = photoUrl;
            if (!photoUrl.startsWith('http://') && !photoUrl.startsWith('https://') && !photoUrl.startsWith('data:')) {
              if (!photoUrl.startsWith('/uploads/')) {
                finalPhotoUrl = '/uploads/employees/' + photoUrl;
              }
            }
            photoEl.src = finalPhotoUrl;
          } else {
            photoEl.src = '/img/default-avatar.svg';
          }
          console.log('✅ Updated employeePhoto to:', photoEl.src);
        }

        // บันทึกข้อมูลใหม่ใน localStorage (เขียนทับข้อมูลเก่า)
        localStorage.setItem('userName', userName);
        if (photoUrl) {
          localStorage.setItem('userPhoto', photoUrl);
        } else {
          localStorage.removeItem('userPhoto'); // ลบถ้าไม่มีรูป
        }

        console.log('✅ Profile update completed successfully');
      } catch (err) {
        console.error('❌ loadUserProfile error:', err);

        // แสดง error ที่ชัดเจนขึ้น
        const errorMessage = err.message || 'Unknown error';
        console.error('Error details:', errorMessage);

        // ถ้าเป็น network error หรือ server error ให้ลอง fallback แต่แสดงคำเตือน
        if (errorMessage.includes('Failed to fetch') || errorMessage.includes('Network')) {
          console.warn('⚠️ Network error - using cached data as fallback');

          const fallbackName = localStorage.getItem('userName') || 'ผู้ใช้';
          const fallbackPhoto = localStorage.getItem('userPhoto');

          const nameEl = document.getElementById('employeeName');
          const photoEl = document.getElementById('employeePhoto');

          if (nameEl) nameEl.textContent = fallbackName + ' (Offline)';
          if (photoEl) {
            if (fallbackPhoto) {
              photoEl.src = fallbackPhoto;
            } else {
              photoEl.src = '/img/default-avatar.svg';
            }
          }
        } else {
          // ถ้าเป็น error อื่นๆ ให้ clear cache และ redirect
          console.error('🚫 Critical error - clearing cache and redirecting');
          localStorage.removeItem('authToken');
          localStorage.removeItem('userName');
          localStorage.removeItem('userPhoto');
          localStorage.removeItem('userInfo');
          alert('เกิดข้อผิดพลาดในการโหลดข้อมูลผู้ใช้: ' + errorMessage);
          showLoadingAndRedirect('/login.html');
        }
      }
    }

    async function loadPO() {
      try {
        showLoading();
    
        const mode = document.getElementById('selectMode').value;
        const branchCode = document.getElementById('branchSelect').value;
        const token = localStorage.getItem('authToken');

        let url = '/api/purchase-order?';
        const params = [];
        if (mode !== 'all') {
          params.push(`mode=${mode}`);
        }
        if (branchCode !== 'all') {
          params.push(`branch_code=${branchCode}`);
        }
        url += params.join('&');

        // Create timeout controller
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 10000); // 10 second timeout
    
        const res = await fetch(url, {
          headers: {
            'Authorization': token ? `Bearer ${token}` : '',
            'Content-Type': 'application/json'
          },
          signal: controller.signal
        });
    
        clearTimeout(timeoutId);
    
        // Check if response is JSON
        const contentType = res.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          throw new Error(`Expected JSON response, got: ${contentType || 'unknown'}. Status: ${res.status}`);
        }
    
        const data = await res.json();
        if (!res.ok) {
          throw new Error(data.error || `HTTP Error: ${res.status} ${res.statusText}`);
        }
    
        if (!data.success) {
          throw new Error(data.error || 'API returned unsuccessful response');
        }

        // Display API data
        const poList = data.data || [];
        displayPOData(poList, data.counts);
    
        if (poList.length === 0) {
          showToast('ไม่พบข้อมูลใบสั่งซื้อ', 'info');
        }
    
      } catch (err) {
        console.error('Load PO Error:', err);
    
        // Show empty state
        const tableBody = document.querySelector('#poTable tbody');
        tableBody.innerHTML = '';
    
        const rowCount = document.getElementById('rowCount');
        rowCount.textContent = '0';
    
        // Reset counts
        updateStatusCounts({
          pending: 0,
          approved: 0,
          rejected: 0
        });
    
        // Show empty state with specific message
        const emptyState = document.getElementById('emptyState');
        const emptyStateMessage = document.getElementById('emptyStateMessage');
        const emptyStateIcon = document.getElementById('emptyStateIcon');
        const retryButton = document.getElementById('retryButton');
    
        if (err.name === 'AbortError') {
          emptyStateIcon.className = 'bi bi-clock text-4xl mb-2 block text-yellow-500';
          emptyStateMessage.textContent = 'การเชื่อมต่อใช้เวลานานเกินไป กรุณาลองใหม่อีกครั้ง';
          retryButton.classList.remove('hidden');
          showToast('การเชื่อมต่อใช้เวลานานเกินไป กรุณาลองใหม่อีกครั้ง', 'warning');
        } else if (err.message.includes('404') || err.message.includes('Not Found')) {
          emptyStateIcon.className = 'bi bi-tools text-4xl mb-2 block text-orange-500';
          emptyStateMessage.innerHTML = 'API endpoint ยังไม่พร้อมใช้งาน<br><small class="text-xs text-gray-400">กรุณาตรวจสอบการตั้งค่าเซิร์ฟเวอร์หรือติดต่อผู้ดูแลระบบ</small>';
          retryButton.classList.remove('hidden');
          showToast('🚧 API endpoint ยังไม่พร้อมใช้งาน กรุณาติดต่อผู้ดูแลระบบ', 'warning');
        } else if (err.message.includes('text/html')) {
          emptyStateIcon.className = 'bi bi-exclamation-triangle text-4xl mb-2 block text-red-500';
          emptyStateMessage.innerHTML = 'เซิร์ฟเวอร์ส่งข้อมูลในรูปแบบที่ไม่ถูกต้อง<br><small class="text-xs text-gray-400">ได้รับ HTML แทน JSON</small>';
          retryButton.classList.remove('hidden');
          showToast('🔧 เซิร์ฟเวอร์ส่งข้อมูลในรูปแบบที่ไม่ถูกต้อง กรุณาตรวจสอบ API', 'error');
        } else {
          emptyStateIcon.className = 'bi bi-wifi-off text-4xl mb-2 block text-red-500';
          emptyStateMessage.innerHTML = 'ไม่สามารถเชื่อมต่อเซิร์ฟเวอร์ได้<br><small class="text-xs text-gray-400">' + err.message + '</small>';
          retryButton.classList.remove('hidden');
          showToast('ไม่สามารถโหลดข้อมูลใบสั่งซื้อได้: ' + err.message, 'error');
        }
    
        emptyState.style.display = 'block';
      } finally {
        hideLoading();
      }
    }
    

    function displayPOData(poList, counts) {
      const tableBody = document.querySelector('#poTable tbody');
      tableBody.innerHTML = '';

      const rowCount = document.getElementById('rowCount');
      rowCount.textContent = poList.length;
    
      // Update counts (use provided counts or calculate from data)
      const statusCounts = counts || {
        pending: poList.filter(item => item.status === 'pending').length,
        approved: poList.filter(item => item.status === 'approved').length,
        rejected: poList.filter(item => item.status === 'rejected').length
      };
      updateStatusCounts(statusCounts);
    
      // Show/hide empty state
      const emptyState = document.getElementById('emptyState');
      const emptyStateMessage = document.getElementById('emptyStateMessage');
      const emptyStateIcon = document.getElementById('emptyStateIcon');
      const retryButton = document.getElementById('retryButton');
    
      if (poList.length === 0) {
        // Reset to default empty state (no data, but API working)
        emptyStateIcon.className = 'bi bi-inbox text-4xl mb-2 block';
        emptyStateMessage.textContent = 'ไม่พบรายการใบสั่งซื้อ';
        retryButton.classList.add('hidden');
        emptyState.style.display = 'block';
      } else {
        emptyState.style.display = 'none';
      }

      poList.forEach(item => {
        const tr = document.createElement('tr');
        tr.className = 'data-row';
        const createdDate = new Date(item.createdAt).toLocaleString('th-TH');
        const statusText = item.status || 'pending';
        const categoryGroupText = item.categoryGroup?.name || item.categoryGroup || '-';
    
        // Display creator/approver names
        const createdByText = item.createdByName || item.createdBy?.name || '-';
        const approvedByText = item.approvedByName || '-';
        const rejectedByText = item.rejectedByName || '-';

        // Status styling
        let statusClass = 'status-pending';
        let statusDisplay = 'รออนุมัติ';
        let approverInfo = '';
    
        if (statusText === 'approved') {
          statusClass = 'status-approved';
          statusDisplay = 'อนุมัติแล้ว';
          approverInfo = `<div class="text-xs text-gray-500 mt-1">โดย: ${approvedByText}</div>`;
        } else if (statusText === 'rejected') {
          statusClass = 'status-rejected';
          statusDisplay = 'ปฏิเสธแล้ว';
          approverInfo = `<div class="text-xs text-gray-500 mt-1">โดย: ${rejectedByText}</div>`;
        }

        tr.innerHTML = `
          <td class="px-4 py-3 font-medium">${item.poNumber || '-'}</td>
          <td class="px-4 py-3">${categoryGroupText}</td>
          <td class="px-4 py-3">
            ${item.notes || '-'}
            <div class="text-xs text-gray-500">สร้างโดย: ${createdByText}</div>
          </td>
          <td class="px-4 py-3">
            <span id="status-${item._id}" class="status-pill ${statusClass}">${statusDisplay}</span>
            ${approverInfo}
          </td>
          <td class="px-4 py-3">${createdDate}</td>
          <td class="px-4 py-3">
            <div class="flex space-x-2">
              <button
                class="action-btn ${statusText === 'approved' || statusText === 'rejected' ? 'btn-rejected' : 'btn-reject'}"
                data-po-id="${item._id}"
                title="ปฏิเสธ"
                ${statusText === 'approved' || statusText === 'rejected' ? 'disabled' : ''}
              >
                <i class="bi bi-x-circle"></i>
              </button>
              <button
                class="action-btn btn-download"
                data-po-id="${item._id}"
                title="ดาวน์โหลด PDF"
              >
                <i class="bi bi-file-earmark-pdf"></i>
              </button>
            </div>
          </td>
        `;

        tableBody.appendChild(tr);
      });

      attachPOButtonEvents();
    }
    
    
    


    async function rejectPO(poId) {
      const note = prompt('กรุณาระบุเหตุผลที่ปฏิเสธ (ไม่บังคับ):');
      if (note === null) return; // ถ้ากด cancel
    
      try {
        const token = localStorage.getItem('authToken');
    
        const res = await fetch(`/api/purchase-order/reject/${poId}`, {
          method: 'PATCH',
          headers: {
            'Authorization': token ? `Bearer ${token}` : '',
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ note: note || 'ปฏิเสธใบสั่งซื้อ' })
        });
    
        // Check if response is JSON
        const contentType = res.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          throw new Error(`Expected JSON response, got: ${contentType || 'unknown'}. Status: ${res.status}`);
        }
    
        const json = await res.json();
    
        if (!res.ok) {
          throw new Error(json.error || `HTTP Error: ${res.status} ${res.statusText}`);
        }
    
        if (!json.success) {
          throw new Error(json.error || 'API returned unsuccessful response');
        }
    
        showToast('ปฏิเสธใบสั่งซื้อเรียบร้อย!', 'success');
        loadPO(); // โหลดข้อมูลใหม่
      } catch (err) {
        console.error('Reject PO Error:', err);
        showToast('เกิดข้อผิดพลาด: ' + err.message, 'error');
      }
    }

    function downloadPOPDF(poId) {
      const token = localStorage.getItem('authToken');
    
      try {
        // เปิดในหน้าต่างใหม่เพื่อดู/อนุมัติ
        const url = `/api/purchase-order/pdf/${poId}?token=${encodeURIComponent(token || '')}`;
        window.open(url, '_blank');
      } catch (err) {
        console.error('Download PDF Error:', err);
        showToast('ไม่สามารถเปิด PDF ได้: ' + err.message, 'error');
      }
    }
    
    // โหลดรายการสาขา
    async function loadBranches() {
      const branchSelect = document.getElementById('branchSelect');
      const token = localStorage.getItem('authToken');
    
      try {
        // Create timeout controller
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 10000); // 10 second timeout
    
        const res = await fetch('/api/branch', {
          headers: {
            'Authorization': token ? `Bearer ${token}` : '',
            'Content-Type': 'application/json'
          },
          signal: controller.signal
        });
    
        clearTimeout(timeoutId);
    
        // Check if response is JSON
        const contentType = res.headers.get('content-type');
        if (!contentType || !contentType.includes('application/json')) {
          throw new Error(`Expected JSON response, got: ${contentType || 'unknown'}. Status: ${res.status}`);
        }
    
        const js = await res.json();
        if (!res.ok) {
          throw new Error(js.error || `HTTP Error: ${res.status} ${res.statusText}`);
        }
    
        if (!js.success) {
          throw new Error(js.error || 'API returned unsuccessful response');
        }
    
        // Clear existing options (except "all")
        while (branchSelect.options.length > 1) {
          branchSelect.remove(1);
        }
    
        // Add branches from API
        if (js.data && Array.isArray(js.data)) {
          js.data.forEach(branch => {
            const opt = document.createElement('option');
            opt.value = branch.branch_code;
            opt.textContent = branch.name || 'ไม่ทราบชื่อสาขา';
            branchSelect.appendChild(opt);
          });
        }
      } catch (err) {
        console.error('Load Branches Error:', err);
    
        if (err.name === 'AbortError') {
          showToast('⏱️ การเชื่อมต่อเพื่อโหลดสาขาใช้เวลานานเกินไป', 'warning');
        } else if (err.message.includes('404') || err.message.includes('Not Found')) {
          showToast('🚧 API สาขายังไม่พร้อมใช้งาน จะใช้การค้นหาทุกสาขา', 'warning');
        } else {
          showToast('⚠️ ไม่สามารถโหลดรายการสาขาได้: ' + (err.message.length > 50 ? 'การเชื่อมต่อล้มเหลว' : err.message), 'error');
        }
      }
    }

    // ============ เพิ่มฟังก์ชันที่ขาดหายไป ============

    // ฟังก์ชันแสดง Toast notification
    function showToast(message, type = 'info') {
      let toastContainer = document.getElementById('toastContainer');
      if (!toastContainer) {
        toastContainer = document.createElement('div');
        toastContainer.id = 'toastContainer';
        toastContainer.style.cssText = `
          position: fixed;
          top: 20px; right: 20px; z-index: 9999;
          display: flex; flex-direction: column; gap: 10px;
        `;
        document.body.appendChild(toastContainer);
      }
      const colors = { success: '#10b981', error: '#ef4444', warning: '#f59e0b', info: '#3b82f6' };
      const bg = { success: '#d1fae5', error: '#fee2e2', warning: '#fef3c7', info: '#dbeafe' };
      const icons = { success: 'bi-check-circle-fill', error: 'bi-x-circle-fill', warning: 'bi-exclamation-triangle-fill', info: 'bi-info-circle-fill' };
      const toast = document.createElement('div');
      toast.style.cssText = `
        background: ${bg[type]}; color: ${colors[type]};
        padding: 12px 20px; border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        display: flex; align-items: center; gap: 10px;
        min-width: 300px; max-width: 500px;
        animation: slideIn 0.3s ease-out;
        border: 1px solid ${colors[type]}33;
      `;
      toast.innerHTML = `
        <i class="bi ${icons[type]}" style="font-size:20px;"></i>
        <span style="flex:1;">${message}</span>
        <button onclick="this.parentElement.remove()" style="background:none;border:none;cursor:pointer;padding:4px;">
          <i class="bi bi-x" style="font-size:20px;"></i>
        </button>
      `;
      toastContainer.appendChild(toast);
      setTimeout(() => {
        toast.style.animation = 'slideOut 0.3s ease-in';
        setTimeout(() => toast.remove(), 300);
      }, 5000);
    }

    // ฟังก์ชัน logout
    async function logout() {
      if (!confirm('ต้องการออกจากระบบหรือไม่?')) return;
      localStorage.removeItem('authToken');
      localStorage.removeItem('userInfo');
      showToast('ออกจากระบบเรียบร้อย', 'success');
      setTimeout(() => showLoadingAndRedirect('/login'), 700);
    }

    // ฟังก์ชันอัพเดทตัวเลขสถิติ
    function updateStatusCounts(counts) {
      if (document.getElementById('pendingCount')) document.getElementById('pendingCount').textContent = counts.pending || 0;
      if (document.getElementById('approvedCount')) document.getElementById('approvedCount').textContent = counts.approved || 0;
      if (document.getElementById('rejectedCount')) document.getElementById('rejectedCount').textContent = counts.rejected || 0;
    }

    // ผูก event handlers กับปุ่มใน table
    function attachPOButtonEvents() {
      document.querySelectorAll('[id^="rejectBtn-"]').forEach(btn => {
        if (!btn.disabled) btn.onclick = () => rejectPO(btn.dataset.poId);
      });
      document.querySelectorAll('.btn-download').forEach(btn => {
        btn.onclick = () => downloadPOPDF(btn.dataset.poId);
      });
    }



    (function() {
      if (localStorage.getItem('theme') === 'dark') {
        themeIcon.classList.remove('bi-moon-stars-fill');
        themeIcon.classList.add('bi-sun');
      }
    })();

    // CSS animations for toast
    const toastStyles = document.createElement('style');
    toastStyles.textContent = `
      @keyframes slideIn { from {transform:translateX(100%);opacity:0;} to {transform:translateX(0);opacity:1;} }
      @keyframes slideOut{ from{transform:translateX(0);opacity:1;} to{transform:translateX(100%);opacity:0;} }
    `;
    document.head.appendChild(toastStyles);

    // หลังส่วน attachPOButtonEvents() ให้เพิ่ม:
    document.addEventListener('DOMContentLoaded', function() {
      const datePickerTrigger = document.getElementById('datePickerTrigger');
      const datePickerMenu    = document.getElementById('datePickerMenu');
      const cancelDatePicker  = document.getElementById('cancelDatePicker');
      const applyDatePicker   = document.getElementById('applyDatePicker');
      const startDateInput    = document.getElementById('startDate');
      const endDateInput      = document.getElementById('endDate');
      const selectedDateRange = document.getElementById('selectedDateRange');

      if (datePickerTrigger && datePickerMenu) {
        // เปิด/ปิด date picker
        datePickerTrigger.addEventListener('click', e => {
          e.stopPropagation();
          datePickerMenu.classList.toggle('hidden');
        });
        // คลิกข้างนอกปิด
        document.addEventListener('click', e => {
          if (!datePickerMenu.contains(e.target) && e.target !== datePickerTrigger) {
            datePickerMenu.classList.add('hidden');
          }
        });
        // ยกเลิก
        cancelDatePicker?.addEventListener('click', () => {
          datePickerMenu.classList.add('hidden');
        });
        // ยืนยัน
        applyDatePicker?.addEventListener('click', () => {
          const startDate = new Date(startDateInput.value);
          const endDate   = new Date(endDateInput.value);
          if (startDate > endDate) {
            showToast('วันที่เริ่มต้นต้องไม่มากกว่าวันที่สิ้นสุด', 'error');
            return;
          }
          const fmt = d => d.toLocaleDateString('th-TH',{day:'2-digit',month:'2-digit',year:'numeric'});
          selectedDateRange.textContent = `${fmt(startDate)} - ${fmt(endDate)}`;
          datePickerMenu.classList.add('hidden');
          loadPO();
        });
      }
    });

    // Initialize Lottie Animation for Loading
    const lottieContainer = document.getElementById('lottieContainer');
    const loadingOverlay = document.getElementById('loadingOverlay');
    let lottieAnimation;

    // Function to show page loading overlay
    window.showPageLoading = function() {
      if (loadingOverlay) {
        loadingOverlay.style.display = 'flex';
        loadingOverlay.classList.remove('animate__fadeOut');
        loadingOverlay.classList.add('animate__fadeIn');
      }
    };

    // Function to hide page loading overlay
    window.hidePageLoading = function() {
      if (loadingOverlay) {
        loadingOverlay.classList.remove('animate__fadeIn');
        loadingOverlay.classList.add('animate__fadeOut');
        setTimeout(function() {
          loadingOverlay.style.display = 'none';
        }, 500);
      }
    };

    if (lottieContainer && typeof lottie !== 'undefined') {
      try {
        // Load Lottie animation
        lottieAnimation = lottie.loadAnimation({
          container: lottieContainer,
          renderer: 'svg',
          loop: true,
          autoplay: true,
          path: '/Loading/Loading.json'
        });

        // Show loading overlay initially
        showPageLoading();

        // Hide loading after page loads
        window.addEventListener('load', function() {
          setTimeout(function() {
            hidePageLoading();
          }, 800);
        });

        // Fetch user profile
        fetchUserProfile();
      } catch (error) {
        console.error('Error loading Lottie animation:', error);
        loadingOverlay.style.display = 'none';
      }
    } else {
      if (loadingOverlay) loadingOverlay.style.display = 'none';
      fetchUserProfile();
    }

    // Show loading before page navigation
    window.addEventListener('beforeunload', function() {
      showPageLoading();
    });

    // Intercept internal links to show loading
    document.addEventListener('click', function(e) {
      const link = e.target.closest('a[href]');
      if (link && !link.hasAttribute('target') && !link.getAttribute('href').startsWith('#')) {
        const href = link.getAttribute('href');
        // Only show loading for internal navigation (not external links)
        if (href && !href.startsWith('http://') && !href.startsWith('https://') && !href.startsWith('mailto:') && !href.startsWith('tel:')) {
          showPageLoading();
        }
      }
    });
  </script>

