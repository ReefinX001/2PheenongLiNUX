      // ====================== 2) Fetch Taxes (PND1, PN30, PN50) ======================
      async function fetchAllTaxes() {
        try {
          const [pnd1Res, pn30Res, pn50Res] = await Promise.all([
            fetch('/api/branch-stock-history/tax-pnd1?branch_code=all'),
            fetch('/api/branch-stock-history/tax-pn30?branch_code=all'),
            fetch('/api/branch-stock-history/tax-pn50?branch_code=all')
          ]);
          const [pnd1Json, pn30Json, pn50Json] = await Promise.all([
            pnd1Res.json(),
            pn30Res.json(),
            pn50Res.json()
          ]);

          // ภงด. 1,3,53
          if (pnd1Json.success) {
            const totalTax = pnd1Json.data.details.totalTax || 0;
            document.getElementById('taxPnD1Amount').textContent = `ยอด: ${totalTax.toLocaleString()} บาท`;
          }
          // ภพ.30
          if (pn30Json.success) {
            const totalTax = pn30Json.data.details.totalTax || 0;
            document.getElementById('taxPn30Amount').textContent = `ยอด: ${totalTax.toLocaleString()} บาท`;
          }
          // ภวด.51,50
          if (pn50Json.success) {
            const totalTax = pn50Json.data.details.totalTax || 0;
            document.getElementById('taxPn50Amount').textContent = `ยอด: ${totalTax.toLocaleString()} บาท`;
          }
        } catch (err) {
          console.error('Error fetching taxes:', err);
        }
      }

