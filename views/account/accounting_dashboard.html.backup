          spanUser.classList.add('me-3', 'text-secondary');
          spanUser.textContent = userName ? userName : 'Guest';
          navRight.insertBefore(spanUser, navRight.firstChild);
        }
      })();

      document.querySelectorAll('.dropdown-submenu .dropdown-toggle').forEach(function(toggle) {
        toggle.addEventListener('click', function(e) {
          e.preventDefault();
          e.stopPropagation();
          let subMenu = this.nextElementSibling;
          if (subMenu.classList.contains('show')) {
            subMenu.classList.remove('show');
          } else {
            let parentMenu = this.closest('.dropdown-menu');
            parentMenu.querySelectorAll('.dropdown-menu.show').forEach(function(openSub) {
              openSub.classList.remove('show');
            });
            subMenu.classList.add('show');
          }
        });
      });

      let financeChart = null;

      // ====================== 1) Fetch Finance Data (Income/Expense) ======================
      async function fetchFinanceData() {
        try {
          const [respSales, respExpenses] = await Promise.all([
            fetch('/api/branch-stock-history/sales-revenue'),
            fetch('/api/expenses')
          ]);
          const salesJson = await respSales.json();
          const expensesJson = await respExpenses.json();
          if (!salesJson.success || !expensesJson.success) {
            throw new Error('โหลดข้อมูลรายรับ/รายจ่ายไม่สำเร็จ');
          }
          const totalSales = salesJson.data.totalSales || 0;
          let totalExpense = 0;
          for (const exp of (expensesJson.data || [])) {
            totalExpense += exp.amount;
          }
          const netProfit = totalSales - totalExpense;

          document.getElementById('totalIncome').textContent = totalSales.toLocaleString() + ' บาท';
          document.getElementById('totalExpense').textContent = totalExpense.toLocaleString() + ' บาท';
          document.getElementById('netProfit').textContent = netProfit.toLocaleString() + ' บาท';

          updateFinanceChart(totalSales, totalExpense, netProfit);
          const data = {
            income: totalSales,
            expense: totalExpense,
            profit: netProfit,
            monthlyIncome: [10000, 12000, 15000, 13000, 20000, 18000]
          };
          updateCharts(data);
        } catch (err) {
          console.error('Error fetching finance data:', err);
        }
      }

      function updateFinanceChart(totalIncome, totalExpense, netProfit) {
        const ctx = document.getElementById('financeChart').getContext('2d');
        if (financeChart) {
          financeChart.destroy();
        }
        financeChart = new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['Income', 'Expense', 'Profit'],
            datasets: [{
              label: 'Amount (Baht)',
              data: [totalIncome, totalExpense, netProfit],
              backgroundColor: ['#0d6efd', '#dc3545', '#198754']
            }]
          },
          options: { responsive: true, scales: { y: { beginAtZero: true } } }
        });
      }

      function updateCharts(data) {
        new Chart(document.getElementById('barChart'), {
          type: 'bar',
          data: {
            labels: ['Income', 'Expense', 'Profit'],
            datasets: [{
              label: 'Amount (Baht)',
              data: [data.income, data.expense, data.profit],
              backgroundColor: ['#0d6efd', '#dc3545', '#198754']
            }]
          }
        });
