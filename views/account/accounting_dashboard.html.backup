     // ======= ปุ่ม "แก้ไขบัญชี" ตัวอย่างการเรียก API /api/bank-accounts/1 =======
     document.getElementById('btnEditBank').addEventListener('click', async () => {
      try {
        // 1) GET ข้อมูลบัญชี (สมมติ id=1)
        let res = await fetch('/api/bank-accounts/1');
        let json = await res.json();
        if (!res.ok || !json.success) {
          throw new Error(json.error || 'ไม่พบข้อมูลบัญชีธนาคาร');
        }
        const oldData = json.data; // { bankName, accountNumber, accountName }

        // 2) ให้ผู้ใช้กรอกข้อมูลใหม่ผ่าน prompt (ตัวอย่างง่าย ๆ)
        const newBankName = prompt('ชื่อธนาคาร:', oldData.bankName || '');
        if (newBankName === null) return; // กดยกเลิก

        const newAccNumber = prompt('เลขบัญชี:', oldData.accountNumber || '');
        if (newAccNumber === null) return;

        const newAccName = prompt('ชื่อบัญชี:', oldData.accountName || '');
        if (newAccName === null) return;

        // 3) PUT เพื่ออัปเดต
        res = await fetch('/api/bank-accounts/1', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            bankName: newBankName,
            accountNumber: newAccNumber,
            accountName: newAccName
          })
        });
        json = await res.json();
        if (!res.ok || !json.success) {
          throw new Error(json.error || 'อัปเดตบัญชีไม่สำเร็จ');
        }

        alert('อัปเดตบัญชีธนาคารสำเร็จ!');
        // ถ้าต้องการรีเฟรช UI ก็ทำเพิ่ม เช่น fetchFinanceData() หรือเปลี่ยนข้อความในหน้า
      } catch (err) {
        alert('เกิดข้อผิดพลาด: ' + err.message);
      }
    });

