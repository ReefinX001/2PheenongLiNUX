        // Force close modal without confirmation
        function forceCloseZoneMapViewerModal() {
            document.getElementById('zoneMapViewerModal').classList.add('hidden');
            
            // Reset edit mode
            isEditingZone = false;
            setViewerEditMode(false);
            
