        // View zone on map
        function viewZoneOnMap(lat, lng, radius, zoneName = '') {
            // Update the form inputs and map
            setMapLocation(lat, lng, radius);
            
            // Scroll to map
            document.getElementById('zoneMap').scrollIntoView({ 
                behavior: 'smooth', 
                block: 'center' 
            });
            
            showAlert('info', `แสดงตำแหน่ง${zoneName ? ' "' + zoneName + '"' : ''} บนแผนที่แล้ว`);
        }

        // Save new zone area
        async function saveZoneArea() {
            try {
                const branchSelect = document.getElementById('zoneBranchSelect');
                const selectedBranchId = branchSelect.value;
                const name = document.getElementById('zoneNameInput').value.trim();
                const lat = parseFloat(document.getElementById('zoneLatitude').value);
                const lng = parseFloat(document.getElementById('zoneLongitude').value);
                const radius = parseInt(document.getElementById('zoneRadius').value, 10);
                
                // Validation
                if (!selectedBranchId) {
                    showAlert('error', 'กรุณาเลือกสาขา');
                    return;
                }
                
                if (!name || isNaN(lat) || isNaN(lng) || isNaN(radius)) {
                    showAlert('error', 'กรุณากรอกข้อมูลให้ครบถ้วน');
                    return;
                }
                
                if (radius < 1 || radius > 10000) {
                    showAlert('error', 'รัศมีต้องอยู่ระหว่าง 1-10,000 เมตร');
                    return;
                }
                
                // Get branch data for additional info
                const selectedOption = branchSelect.selectedOptions[0];
                const branchData = selectedOption ? JSON.parse(selectedOption.dataset.branchData) : {};
                
                const payload = {
                    name: name,
                    branchId: selectedBranchId,
                    branchName: branchData.name || '',
                    center: { latitude: lat, longitude: lng },
                    radius: radius,
                    isActive: true,
                    createdBy: 'HR Admin',
                    createdAt: new Date().toISOString()
                };
                
                const response = await fetch('/api/zone', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(payload)
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    showAlert('success', `พื้นที่ "${name}" ถูกสร้างเรียบร้อยแล้ว`);
                    
                    // Clear form
                    document.getElementById('zoneBranchSelect').value = '';
                    document.getElementById('zoneNameInput').value = '';
                    document.getElementById('zoneLatitude').value = '';
                    document.getElementById('zoneLongitude').value = '';
                    document.getElementById('zoneRadius').value = '100';
                    
                    // Reload data
                    loadZoneManagementData();
                    loadZones(); // Refresh main zone list
                } else {
                    showAlert('error', 'ไม่สามารถสร้างพื้นที่ได้: ' + (result.error || result.message));
                }
            } catch (error) {
                console.error('Error saving zone area:', error);
                showAlert('error', 'เกิดข้อผิดพลาดในการบันทึกพื้นที่: ' + error.message);
            }
        }

        // Update zone area
        async function updateZoneArea(zoneId) {
            try {
                // Find the row with the specific zone ID
                const row = document.querySelector(`tr`);
                const inputs = row?.querySelectorAll(`[data-zone-id="${zoneId}"]`);
                
                if (!inputs || inputs.length === 0) {
                    showAlert('error', 'ไม่พบข้อมูลพื้นที่ที่ต้องการแก้ไข');
                    return;
                }
                
                const nameInput = document.querySelector(`.zone-name-input[data-zone-id="${zoneId}"]`);
                const latInput = document.querySelector(`.zone-lat-input[data-zone-id="${zoneId}"]`);
                const lngInput = document.querySelector(`.zone-lng-input[data-zone-id="${zoneId}"]`);
                const radiusInput = document.querySelector(`.zone-radius-input[data-zone-id="${zoneId}"]`);
                const activeInput = document.querySelector(`.zone-active-input[data-zone-id="${zoneId}"]`);
                
                if (!nameInput || !latInput || !lngInput || !radiusInput || !activeInput) {
                    showAlert('error', 'ไม่พบฟิลด์ข้อมูลที่จำเป็น');
                    return;
                }
                
                const name = nameInput.value.trim();
                const lat = parseFloat(latInput.value);
                const lng = parseFloat(lngInput.value);
                const radius = parseInt(radiusInput.value, 10);
                const isActive = activeInput.checked;
                
                if (!name || isNaN(lat) || isNaN(lng) || isNaN(radius)) {
                    showAlert('error', 'กรุณากรอกข้อมูลให้ครบถ้วน');
                    return;
                }
                
                const payload = {
                    name: name,
                    center: { latitude: lat, longitude: lng },
                    radius: radius,
                    isActive: isActive
                };
                
                const response = await fetch(`/api/zone/${zoneId}`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(payload)
                });
                
                const result = await response.json();
                
                if (response.ok && result.success) {
                    showAlert('success', 'อัปเดตพื้นที่เรียบร้อยแล้ว');
                    loadZoneManagementData();
                    loadZones(); // Refresh main zone list
                } else {
                    showAlert('error', 'ไม่สามารถอัปเดตพื้นที่ได้: ' + (result.error || result.message));
                }
            } catch (error) {
                console.error('Error updating zone area:', error);
                showAlert('error', 'เกิดข้อผิดพลาดในการอัปเดตพื้นที่: ' + error.message);
            }
        }

        // Delete zone area
        async function deleteZoneArea(zoneId) {
            try {
