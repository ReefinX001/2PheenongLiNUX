        // Save schedule
        async function saveSchedule() {
            try {
                const formData = collectScheduleFormData();
                
                if (!validateScheduleForm(formData)) {
                    return;
                }

                const scheduleId = document.getElementById('scheduleId').value;
                const url = scheduleId ? 
                    `${API_BASE}/hr/work-schedules/${scheduleId}` : 
                    `${API_BASE}/hr/work-schedules`;
                
                const method = scheduleId ? 'PUT' : 'POST';
                
                const response = await fetch(url, {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(formData)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    closeScheduleModal();
                    showAlert('success', scheduleId ? 'อัพเดทตารางงานเรียบร้อยแล้ว' : 'สร้างตารางงานเรียบร้อยแล้ว');
                    
                    // Refresh data
                    loadEmployees();
                    if (currentTab === 'schedules') {
                        loadActiveSchedules();
                    }
                } else {
                    showAlert('error', 'ไม่สามารถบันทึกตารางงานได้: ' + (result.error || result.message));
                }
            } catch (error) {
                console.error('Error saving schedule:', error);
                showAlert('error', 'เกิดข้อผิดพลาดในการบันทึกตารางงาน');
            }
        }

        // Collect form data
        function collectScheduleFormData() {
            const formData = {
                userId: document.getElementById('selectedUserId').value,
                branchId: document.getElementById('selectedBranchId').value,
                workType: document.getElementById('workType').value,
                effectiveFrom: document.getElementById('effectiveFrom').value,
                effectiveTo: document.getElementById('effectiveTo').value || null,
                notes: document.getElementById('scheduleNotes').value,
                location: {
                    branchId: document.getElementById('selectedBranchId').value,
                    allowedRadius: parseInt(document.getElementById('allowedRadius').value) || 100,
                    coordinates: {
                        lat: parseFloat(document.getElementById('branchLat').value) || null,
                        lng: parseFloat(document.getElementById('branchLng').value) || null
                    }
                }
            };

            // Add type-specific data
            if (formData.workType === 'regular') {
                formData.regularSchedule = getRegularScheduleData();
            } else if (formData.workType === 'shift') {
                formData.shiftSchedule = getShiftScheduleData();
            } else if (formData.workType === 'flexible') {
                formData.flexibleSchedule = getFlexibleScheduleData();
            }

            return formData;
        }

        // Get regular schedule data
        function getRegularScheduleData() {
            const periods = [];
            document.querySelectorAll('#regularPeriods .period-row').forEach(row => {
                const period = {
                    name: row.querySelector('.period-name').value,
                    startTime: row.querySelector('.period-start').value,
                    endTime: row.querySelector('.period-end').value,
                    breakDuration: parseInt(row.querySelector('.period-break').value) || 0,
                    isActive: true
                };
                if (period.name && period.startTime && period.endTime) {
                    periods.push(period);
                }
            });

            const workDays = [];
            document.querySelectorAll('#scheduleForm input[type="checkbox"]:checked').forEach(cb => {
                workDays.push(cb.value);
            });

            return {
                periods: periods,
                workDays: workDays
            };
        }

        // Get shift schedule data
        function getShiftScheduleData() {
            return {
                startTime: document.getElementById('shiftStartTime').value,
                endTime: document.getElementById('shiftEndTime').value,
                pattern: document.getElementById('shiftPattern').value
            };
        }

        // Get flexible schedule data
        function getFlexibleScheduleData() {
            return {
                minHoursPerDay: parseInt(document.getElementById('minHoursPerDay').value) || 8,
                maxHoursPerDay: parseInt(document.getElementById('maxHoursPerDay').value) || 12
            };
        }

        // Validate schedule form
        function validateScheduleForm(formData) {
            if (!formData.userId) {
                showAlert('error', 'ไม่พบข้อมูลพนักงาน');
                return false;
            }

            if (!formData.workType) {
                showAlert('error', 'กรุณาเลือกประเภทงาน');
                return false;
            }

            if (!formData.effectiveFrom) {
                showAlert('error', 'กรุณาระบุวันที่เริ่มต้น');
                return false;
            }

            // Validate type-specific data
            if (formData.workType === 'regular') {
                if (!formData.regularSchedule.periods.length) {
                    showAlert('error', 'กรุณาเพิ่มช่วงเวลาทำงานอย่างน้อย 1 ช่วง');
                    return false;
                }
                if (!formData.regularSchedule.workDays.length) {
                    showAlert('error', 'กรุณาเลือกวันทำงาน');
                    return false;
                }
            } else if (formData.workType === 'shift') {
                if (!formData.shiftSchedule.startTime || !formData.shiftSchedule.endTime) {
                    showAlert('error', 'กรุณาระบุเวลาทำงานสำหรับกะ');
                    return false;
                }
            }

            return true;
        }

