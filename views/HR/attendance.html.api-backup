                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                // Create schedules for selected employees
                const promises = selectedEmployees.map(employee => {
                    const scheduleData = getTemplateData(selectedTemplate);
                    scheduleData.userId = employee.id;
                    scheduleData.branchId = currentZoneId;
                    scheduleData.effectiveFrom = effectiveFrom;
                    scheduleData.effectiveTo = effectiveTo || null;
                    scheduleData.notes = `สร้างจากเทมเพลต: ${templateName}`;
                    
                    // Add location settings
                    scheduleData.location = {
                        branchId: currentZoneId,
                        allowedRadius: 100,
                        coordinates: {
                            lat: null,
                            lng: null
                        }
                    };

                    return fetch(`${API_BASE}/hr/work-schedules`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'Authorization': `Bearer ${token}`
                        },
                        body: JSON.stringify(scheduleData)
                    });
                });

                const results = await Promise.all(promises);
                const successCount = results.filter(r => r.ok).length;
                const failedCount = selectedEmployees.length - successCount;

                closeBulkScheduleModal();
                Swal.close();

                if (successCount === selectedEmployees.length) {
                    showAlert('success', `สร้างตารางงานสำเร็จทั้งหมด ${successCount} คน`);
                } else if (successCount > 0) {
                    showAlert('warning', `สร้างตารางงานสำเร็จ ${successCount} คน, ไม่สำเร็จ ${failedCount} คน`);
                } else {
                    showAlert('error', 'ไม่สามารถสร้างตารางงานได้เลย กรุณาตรวจสอบข้อมูล');
                }

                // Refresh data
                loadEmployees();
                if (currentTab === 'schedules') {
                    loadActiveSchedules();
                }

            } catch (error) {
                console.error('Error creating bulk schedules:', error);
                Swal.close();
                showAlert('error', 'เกิดข้อผิดพลาดในการสร้างตารางงาน: ' + error.message);
            }
        }

