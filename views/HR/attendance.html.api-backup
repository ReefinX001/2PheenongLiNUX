        // Save overtime request
        async function saveOvertimeRequest() {
            try {
                const formData = {
                    employeeId: document.getElementById('overtimeEmployeeSelect').value,
                    branchId: currentZoneId,
                    date: document.getElementById('overtimeDate').value,
                    type: document.getElementById('overtimeType').value,
                    startTime: document.getElementById('overtimeStartTime').value,
                    endTime: document.getElementById('overtimeEndTime').value,
                    hours: parseFloat(document.getElementById('overtimeHours').value),
                    reason: document.getElementById('overtimeReason').value,
                    priority: document.getElementById('overtimePriority').value,
                    status: 'pending'
                };

                // Validate form
                if (!formData.employeeId || !formData.date || !formData.type || 
                    !formData.startTime || !formData.endTime || !formData.reason) {
                    showAlert('error', 'กรุณากรอกข้อมูลให้ครบถ้วน');
                    return;
                }

                const response = await fetch(`${API_BASE}/hr/overtime`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        closeOvertimeModal();
                        showAlert('success', 'สร้างคำขอ OT เรียบร้อยแล้ว');
                        loadOvertimeData();
                    } else {
                        showAlert('error', 'ไม่สามารถสร้างคำขอ OT ได้: ' + result.message);
                    }
                } else {
                    const errorResult = await response.json();
                    showAlert('error', 'ไม่สามารถสร้างคำขอ OT ได้: ' + (errorResult.message || `HTTP ${response.status}`));
                }
            } catch (error) {
                console.error('Error saving overtime request:', error);
                showAlert('error', 'เกิดข้อผิดพลาดในการบันทึกคำขอ OT');
            }
        }

