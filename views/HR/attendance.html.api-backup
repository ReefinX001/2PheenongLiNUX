                attendances.forEach(attendance => {
                    if (attendance.checkIn) checkedInCount++;
                    
                    const workingHours = attendance.checkOut ? 
                        ((new Date(attendance.checkOut) - new Date(attendance.checkIn)) / (1000 * 60 * 60)).toFixed(1) : 
                        '-';
                    
                    const row = document.createElement('tr');
                    row.className = 'border-b dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors';
                    
                    row.innerHTML = `
                        <td class="py-3">
