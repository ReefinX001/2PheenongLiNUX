        // Load branches for zone creation
        async function loadBranchesForZone() {
            try {
                console.log('Loading branches from /api/branch...');
                
                const response = await fetch(`${API_BASE}/branch`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });
                
                console.log('Branch API response status:', response.status);
                
                if (response.ok) {
                    const result = await response.json();
                    console.log('Branch API response:', result);
                    
                    // Handle different response formats
                    let branches = [];
                    if (result.success && result.data) {
                        branches = result.data;
                    } else if (Array.isArray(result)) {
                        branches = result;
                    } else if (result.branches) {
                        branches = result.branches;
                    }
                    
                    if (branches && branches.length > 0) {
                        displayBranchesForZone(branches);
                        console.log(`Loaded ${branches.length} branches successfully`);
                    } else {
                        console.warn('No branches found in response');
                        showAlert('warning', 'ไม่พบข้อมูลสาขา');
                        displayBranchesForZone([]);
                    }
                } else {
                    console.error('Failed to load branches:', response.status);
                    showAlert('error', `ไม่สามารถโหลดข้อมูลสาขาได้ (HTTP ${response.status})`);
                    displayBranchesForZone([]);
                }
            } catch (error) {
                console.error('Error loading branches for zone:', error);
                showAlert('error', 'เกิดข้อผิดพลาดในการโหลดข้อมูลสาขา: ' + error.message);
                displayBranchesForZone([]);
            }
        }

        // Display branches in select dropdown
        function displayBranchesForZone(branches) {
            const select = document.getElementById('zoneBranchSelect');
            select.innerHTML = '<option value="">กรุณาเลือกสาขา</option>';
            
            if (!branches || branches.length === 0) {
                select.innerHTML = '<option value="">ไม่พบข้อมูลสาขา</option>';
                return;
            }
            
            console.log('Displaying branches:', branches);
            
            branches.forEach((branch, index) => {
                console.log(`Branch ${index}:`, branch);
                
                const option = document.createElement('option');
                option.value = branch._id || branch.id || branch.branchId;
                
                // Handle different name fields
                const branchName = branch.name || branch.branchName || branch.title || `สาขา ${index + 1}`;
                option.textContent = branchName;
                
                // Store comprehensive branch data
                const branchData = {
                    id: branch._id || branch.id || branch.branchId,
                    name: branchName,
                    address: branch.address || branch.location || '',
                    // Handle different coordinate field structures
                    latitude: branch.latitude || branch.lat || branch.center?.latitude || branch.coordinates?.lat || branch.location?.latitude,
                    longitude: branch.longitude || branch.lng || branch.center?.longitude || branch.coordinates?.lng || branch.location?.longitude,
                    // Additional fields that might be useful
                    phone: branch.phone || branch.phoneNumber || '',
                    email: branch.email || '',
                    manager: branch.manager || branch.branchManager || '',
                    isActive: branch.isActive !== false // Default to true if not specified
                };
                
                option.dataset.branchData = JSON.stringify(branchData);
                select.appendChild(option);
                
                console.log(`Added branch option: ${branchName} (ID: ${branchData.id})`);
            });
            
            console.log(`Total branches added to dropdown: ${branches.length}`);
        }

