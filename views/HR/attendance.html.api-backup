        // Update overtime summary
        function updateOvertimeSummary(overtimeData) {
            const pendingCount = overtimeData.filter(ot => ot.status === 'pending').length;
            const approvedCount = overtimeData.filter(ot => ot.status === 'approved').length;
            const totalHours = overtimeData
                .filter(ot => ot.status === 'approved')
                .reduce((sum, ot) => sum + ot.hours, 0);
            
            document.getElementById('pendingOTCount').textContent = pendingCount;
            document.getElementById('approvedOTCount').textContent = approvedCount;
            document.getElementById('totalOTHours').textContent = totalHours;
        }

