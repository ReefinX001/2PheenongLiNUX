        // Apply template
        function applyTemplate(templateId) {
            const templateData = getTemplateData(templateId);
            
            document.getElementById('workType').value = templateData.workType;
            toggleWorkTypeSettings();

            if (templateData.workType === 'regular' && templateData.regularSchedule) {
                // Clear existing periods
                document.getElementById('regularPeriods').innerHTML = '';

                // Set work days
                document.querySelectorAll('#scheduleForm input[type="checkbox"]').forEach(cb => cb.checked = false);
                templateData.regularSchedule.workDays.forEach(day => {
                    const checkbox = document.getElementById(day);
                    if (checkbox) checkbox.checked = true;
                });

                // Add periods
                templateData.regularSchedule.periods.forEach(period => {
                    addRegularPeriod();
                    const lastPeriod = document.querySelector('#regularPeriods .period-row:last-child');
                    if (lastPeriod) {
                        lastPeriod.querySelector('.period-name').value = period.name;
                        lastPeriod.querySelector('.period-start').value = period.startTime;
                        lastPeriod.querySelector('.period-end').value = period.endTime;
                        lastPeriod.querySelector('.period-break').value = period.breakDuration || 0;
                    }
                });
            } else if (templateData.workType === 'shift' && templateData.shiftSchedule) {
                document.getElementById('shiftStartTime').value = templateData.shiftSchedule.startTime;
                document.getElementById('shiftEndTime').value = templateData.shiftSchedule.endTime;
                document.getElementById('shiftPattern').value = templateData.shiftSchedule.pattern;
            } else if (templateData.workType === 'flexible' && templateData.flexibleSchedule) {
                document.getElementById('minHoursPerDay').value = templateData.flexibleSchedule.minHoursPerDay;
                document.getElementById('maxHoursPerDay').value = templateData.flexibleSchedule.maxHoursPerDay;
            }

            closeScheduleTemplateModal();
            showAlert('success', 'ใช้เทมเพลตเรียบร้อยแล้ว');
        }

