        // Get employee schedule status
        async function getEmployeeScheduleStatus(employee) {
            try {
                // Check if employee has active schedule
                const response = await fetch(`${API_BASE}/hr/work-schedules/user/${employee._id}/active?branchId=${currentZoneId}`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });
                
                if (response.ok) {
                    const result = await response.json();
                    if (result.success && result.data) {
                        const schedule = result.data;
                        return {
                            badge: '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200"><i class="bi bi-check-circle mr-1"></i>พร้อมเช็คอิน</span>',
                            canCheckIn: true,
                            hasActiveSchedule: true,
                            currentSchedule: formatScheduleDisplay(schedule),
                            scheduleData: schedule
                        };
                    }
                }
                
                // No active schedule found
                return {
                    badge: '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200"><i class="bi bi-exclamation-triangle mr-1"></i>ไม่สามารถเช็คอินได้</span>',
                    canCheckIn: false,
                    hasActiveSchedule: false,
                    currentSchedule: '<small class="text-gray-500 dark:text-gray-400">ยังไม่ได้กำหนดตารางงาน</small>',
                    scheduleData: null
                };
            } catch (error) {
                console.error('Error checking schedule status:', error);
                // Return default "no schedule" status on error
                return {
                    badge: '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200"><i class="bi bi-question-circle mr-1"></i>ตรวจสอบไม่ได้</span>',
                    canCheckIn: false,
                    hasActiveSchedule: false,
                    currentSchedule: '<small class="text-gray-500 dark:text-gray-400">ตรวจสอบสถานะไม่ได้</small>',
                    scheduleData: null
                };
            }
