                if (cells.length >= 2) {
                    const code = cells[0].textContent.trim();
                    const name = cells[1].querySelector('div')?.firstChild?.textContent?.trim();
                    if (code && name) {
                        const option = document.createElement('option');
                        option.value = code; // This should be employee ID in real implementation
                        option.textContent = `${code} - ${name}`;
                        select.appendChild(option);
                    }
                }
            });
        }

        // Calculate overtime hours
        function calculateOvertimeHours() {
            const startTime = document.getElementById('overtimeStartTime').value;
            const endTime = document.getElementById('overtimeEndTime').value;
            
            if (startTime && endTime) {
                const start = new Date(`2000-01-01T${startTime}:00`);
                const end = new Date(`2000-01-01T${endTime}:00`);
                
                // Handle overnight shifts
                if (end < start) {
                    end.setDate(end.getDate() + 1);
                }
                
                const diffMs = end - start;
                const diffHours = diffMs / (1000 * 60 * 60);
                
                document.getElementById('overtimeHours').value = diffHours.toFixed(1);
            }
        }

        // Load overtime data
        async function loadOvertimeData() {
            // Don't load if no zone selected
            if (!currentZoneId) {
                console.warn('No zone selected, skipping overtime loading');
                displayOvertimeData([]);
                updateOvertimeSummary([]);
                return;
            }

            try {
                const response = await fetch(`${API_BASE}/hr/overtime?branchId=${encodeURIComponent(currentZoneId)}`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result.success) {
                        displayOvertimeData(result.data || []);
                        updateOvertimeSummary(result.data || []);
                    } else {
                        throw new Error(result.error || 'Unknown error');
                    }
                } else if (response.status === 404) {
                    console.warn('Overtime API endpoint not found, skipping...');
                    displayOvertimeData([]);
                    updateOvertimeSummary([]);
                } else {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
            } catch (error) {
                console.error('Error loading overtime data:', error);
                // Don't show alert for 404 - just log it
                if (!error.message.includes('404')) {
                    showAlert('error', 'ไม่สามารถโหลดข้อมูล OT ได้: ' + error.message);
                }
                displayOvertimeData([]);
                updateOvertimeSummary([]);
            }
        }


