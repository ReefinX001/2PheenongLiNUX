        // Populate form with existing schedule data
        function populateScheduleForm(schedule) {
            document.getElementById('workType').value = schedule.workType;
            document.getElementById('effectiveFrom').value = schedule.effectiveFrom ? schedule.effectiveFrom.split('T')[0] : '';
            document.getElementById('effectiveTo').value = schedule.effectiveTo ? schedule.effectiveTo.split('T')[0] : '';
            document.getElementById('scheduleNotes').value = schedule.notes || '';
            
            // Location settings
            if (schedule.location) {
                document.getElementById('allowedRadius').value = schedule.location.allowedRadius || 100;
                if (schedule.location.coordinates) {
                    document.getElementById('branchLat').value = schedule.location.coordinates.lat || '';
                    document.getElementById('branchLng').value = schedule.location.coordinates.lng || '';
                }
            }
            
            toggleWorkTypeSettings();
            
            // Populate type-specific settings
            if (schedule.workType === 'regular' && schedule.regularSchedule) {
                // Work days
                const workDays = schedule.regularSchedule.workDays || [];
                workDays.forEach(day => {
                    const checkbox = document.getElementById(day);
                    if (checkbox) checkbox.checked = true;
                });
                
                // Periods
                const periods = schedule.regularSchedule.periods || [];
                periods.forEach(period => {
                    addRegularPeriod();
                    const lastPeriod = document.querySelector('#regularPeriods .period-row:last-child');
                    if (lastPeriod) {
                        lastPeriod.querySelector('.period-name').value = period.name || '';
                        lastPeriod.querySelector('.period-start').value = period.startTime || '';
                        lastPeriod.querySelector('.period-end').value = period.endTime || '';
                        lastPeriod.querySelector('.period-break').value = period.breakDuration || 0;
                    }
                });
            } else if (schedule.workType === 'shift' && schedule.shiftSchedule) {
                document.getElementById('shiftStartTime').value = schedule.shiftSchedule.startTime || '';
                document.getElementById('shiftEndTime').value = schedule.shiftSchedule.endTime || '';
                document.getElementById('shiftPattern').value = schedule.shiftSchedule.pattern || 'daily';
            } else if (schedule.workType === 'flexible' && schedule.flexibleSchedule) {
                document.getElementById('minHoursPerDay').value = schedule.flexibleSchedule.minHoursPerDay || 8;
                document.getElementById('maxHoursPerDay').value = schedule.flexibleSchedule.maxHoursPerDay || 12;
            }
        }

