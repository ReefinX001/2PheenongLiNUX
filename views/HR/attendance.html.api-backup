        // Update viewer zone info display
        function updateViewerZoneInfo() {
            if (!currentViewerZone) return;
            
            const { lat, lng, radius, name } = currentViewerZone;
            
            // Update view mode
            document.getElementById('viewerZoneName').textContent = name;
