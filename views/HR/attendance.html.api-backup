            const select = document.getElementById('overtimeEmployeeSelect');
            select.innerHTML = '<option value="">เลือกพนักงาน</option>';
            
            // Get current employees from the table
            const employeeRows = document.querySelectorAll('#employeeTableBody tr');
            employeeRows.forEach(row => {
