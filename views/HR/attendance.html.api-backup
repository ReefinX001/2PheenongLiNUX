        // Helper functions
        function getAttendanceStatusBadge(attendance) {
            if (!attendance.checkIn) {
                return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-600 dark:text-gray-200">ยังไม่เข้างาน</span>';
            } else if (!attendance.checkOut) {
                return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">กำลังทำงาน</span>';
            } else {
                return '<span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">เสร็จงานแล้ว</span>';
            }
        }

        function getWorkTimeDisplay(schedule) {
            if (schedule.workType === 'regular' && schedule.regularSchedule) {
                const periods = schedule.regularSchedule.periods || [];
                return periods.map(p => `${p.startTime}-${p.endTime}`).join(', ');
            } else if (schedule.workType === 'shift' && schedule.shiftSchedule) {
                return `${schedule.shiftSchedule.startTime}-${schedule.shiftSchedule.endTime}`;
            }
            return '-';
        }
        
        function getWorkDaysDisplay(schedule) {
            if (schedule.workType === 'regular' && schedule.regularSchedule) {
                const days = schedule.regularSchedule.workDays || [];
                return getWorkDaysText(days);
            }
            return 'ตามกะ';
        }
        
        function getWorkDaysText(workDays) {
            const dayNames = {
                'monday': 'จ',
                'tuesday': 'อ',
                'wednesday': 'พ',
                'thursday': 'พฤ',
                'friday': 'ศ',
                'saturday': 'ส',
                'sunday': 'อา'
            };
            
            return workDays.map(day => dayNames[day] || day).join(', ');
        }
        
        function getWorkTypeBadgeClass(workType) {
            switch (workType) {
                case 'regular': return 'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200';
                case 'shift': return 'bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200';
                case 'flexible': return 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200';
                default: return 'bg-gray-100 text-gray-800 dark:bg-gray-600 dark:text-gray-200';
            }
        }
        
        function getWorkTypeText(workType) {
            switch (workType) {
                case 'regular': return 'พนักงานประจำ';
                case 'shift': return 'พนักงานกะ';
                case 'flexible': return 'เวลายืดหยุ่น';
                default: return workType;
            }
        }

