        // ===== ZONE MAP VIEWER MODAL =====
        let viewerMap;
        let viewerMarker;
        let viewerCircle;
        let currentViewerZone = null;
        let isEditingZone = false;
        let originalZoneData = null;

        // Open zone map viewer modal
        function openZoneMapModal(lat, lng, radius, zoneName) {
            currentViewerZone = { lat, lng, radius, name: zoneName };
            originalZoneData = { lat, lng, radius, name: zoneName };
            isEditingZone = false;
            
