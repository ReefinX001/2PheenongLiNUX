        window.gm_authFailure = gm_authFailure;

        // Initialize zone map
        function initZoneMap() {
            if (!isGoogleMapsLoaded) {
                console.warn('Google Maps API not loaded yet');
                return;
            }

            const mapElement = document.getElementById('zoneMap');
            if (!mapElement) {
                console.error('Map element not found');
                return;
            }

            try {

            // Default center (Bangkok)
            const defaultCenter = { lat: 13.7563, lng: 100.5018 };
            
            // Get current values from inputs
            const latInput = document.getElementById('zoneLatitude');
            const lngInput = document.getElementById('zoneLongitude');
            const radiusInput = document.getElementById('zoneRadius');
            
            let center = defaultCenter;
            if (latInput.value && lngInput.value) {
                center = {
                    lat: parseFloat(latInput.value),
                    lng: parseFloat(lngInput.value)
                };
            }

            // Initialize map
            map = new google.maps.Map(mapElement, {
                zoom: 15,
                center: center,
                mapTypeId: google.maps.MapTypeId.ROADMAP,
                streetViewControl: false,
                mapTypeControl: true,
                fullscreenControl: false
            });

            // Add marker (using AdvancedMarkerElement if available, fallback to Marker)
            if (google.maps.marker && google.maps.marker.AdvancedMarkerElement) {
                marker = new google.maps.marker.AdvancedMarkerElement({
                    position: center,
                    map: map,
                    gmpDraggable: true,
                    title: 'ตำแหน่งพื้นที่เช็คอิน'
                });
            } else {
                marker = new google.maps.Marker({
                    position: center,
                    map: map,
                    draggable: true,
                    title: 'ตำแหน่งพื้นที่เช็คอิน'
                });
            }

            // Add circle
            const radius = radiusInput.value ? parseInt(radiusInput.value) : 100;
            circle = new google.maps.Circle({
                strokeColor: '#3B82F6',
                strokeOpacity: 0.8,
                strokeWeight: 2,
                fillColor: '#3B82F6',
                fillOpacity: 0.2,
                map: map,
                center: center,
                radius: radius
            });

            // Update inputs when marker is dragged
            const dragEndListener = function(event) {
                let lat, lng;
                
                // Handle both AdvancedMarkerElement and regular Marker
                if (event.latLng) {
                    lat = event.latLng.lat();
                    lng = event.latLng.lng();
                } else if (marker.position) {
                    lat = marker.position.lat;
                    lng = marker.position.lng;
                }
                
                if (lat && lng) {
                    latInput.value = lat.toFixed(6);
                    lngInput.value = lng.toFixed(6);
                    
                    // Update circle position
                    circle.setCenter({ lat: lat, lng: lng });
                    
                    showAlert('info', 'ตำแหน่งได้รับการอัปเดตแล้ว');
                }
            };
            
            // Add appropriate event listener based on marker type
            if (marker.addListener) {
                marker.addListener('dragend', dragEndListener);
            } else if (marker.addEventListener) {
                marker.addEventListener('dragend', dragEndListener);
            }

            // Update circle when radius changes
            radiusInput.addEventListener('input', function() {
                const newRadius = parseInt(this.value) || 100;
                circle.setRadius(newRadius);
            });

            // Update map when coordinates change
            latInput.addEventListener('input', updateMapFromInputs);
            lngInput.addEventListener('input', updateMapFromInputs);

            console.log('Zone map initialized successfully');
            
            } catch (error) {
                console.error('Error initializing Google Maps:', error);
                showGoogleMapsError('เกิดข้อผิดพลาดในการโหลดแผนที่: ' + error.message);
            }
        }

        // Update map from input values
        function updateMapFromInputs() {
            if (!map || !marker || !circle) return;
            
            const lat = parseFloat(document.getElementById('zoneLatitude').value);
            const lng = parseFloat(document.getElementById('zoneLongitude').value);
            
            if (isNaN(lat) || isNaN(lng)) return;
            
            const newPosition = { lat: lat, lng: lng };
            
            // Update marker position (handle both marker types)
            if (marker.position && typeof marker.position === 'object') {
                // AdvancedMarkerElement
                marker.position = newPosition;
            } else if (marker.setPosition) {
                // Regular Marker
                marker.setPosition(newPosition);
            }
            
            // Update circle position
            circle.setCenter(newPosition);
            
            // Center map on new position
            map.setCenter(newPosition);
        }

        // Set map location from coordinates
        function setMapLocation(lat, lng, radius = 100) {
            if (!map || !marker || !circle) {
                // If map not initialized, just update inputs
                document.getElementById('zoneLatitude').value = lat.toFixed(6);
                document.getElementById('zoneLongitude').value = lng.toFixed(6);
                document.getElementById('zoneRadius').value = radius;
                return;
            }
            
            const position = { lat: lat, lng: lng };
            
            // Update marker position (handle both marker types)
            if (marker.position && typeof marker.position === 'object') {
                // AdvancedMarkerElement
                marker.position = position;
            } else if (marker.setPosition) {
                // Regular Marker
                marker.setPosition(position);
            }
            
            // Update circle
            circle.setCenter(position);
            circle.setRadius(radius);
            
            // Center map
            map.setCenter(position);
            
            // Update input fields
            document.getElementById('zoneLatitude').value = lat.toFixed(6);
            document.getElementById('zoneLongitude').value = lng.toFixed(6);
            document.getElementById('zoneRadius').value = radius;
        }

