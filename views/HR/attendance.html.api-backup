    <style>
        /* HR Sidebar Component CSS */
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .animate-fadeIn {
            animation: fadeIn 0.3s ease-in-out;
        }

        /* Sidebar Styles */
        #sidebar {
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .dark #sidebar {
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
        }

        /* Sidebar Menu Items */
        #sidebar a, #sidebar button {
            transition: all 0.2s ease-in-out;
            position: relative;
        }

        #sidebar a:hover, #sidebar button:hover {
            transform: translateX(2px);
        }

        /* Active Menu Item */
        #sidebar a.bg-gray-100,
        #sidebar a.dark\:bg-gray-700 {
            position: relative;
        }

        #sidebar a.bg-gray-100::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 4px;
            background: linear-gradient(to bottom, #4f46e5, #7c3aed);
            border-radius: 0 2px 2px 0;
        }

        .dark #sidebar a.dark\:bg-gray-700::before {
            background: linear-gradient(to bottom, #6366f1, #8b5cf6);
        }

        /* Toggle Button */
        #btnToggleMenu {
            transition: all 0.3s ease-in-out;
            transform: translateY(-50%);
        }

        #btnToggleMenu:hover {
            transform: translateY(-50%) scale(1.05);
        }

        #btnToggleMenu i {
            transition: transform 0.3s ease-in-out;
        }

        /* Status indicators */
        .status-indicator {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 5px;
            animation: pulse 2s infinite;
        }

        .status-active {
            background-color: #10b981;
        }

        .status-away {
            background-color: #3b82f6;
        }

        .status-offline {
            background-color: #ef4444;
        }
        
        .status-warning {
            background-color: #f59e0b;
        }

        /* Card hover effects */
        .card {
            transition: all 0.2s ease-in-out;
        }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }

        /* Zone card specific styles */
        .zone-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .zone-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 25px rgba(0,0,0,0.15);
        }

        .zone-card.active {
            border-left: 4px solid #10b981;
            background-color: #f0fdf4;
        }

        .dark .zone-card.active {
            background-color: #064e3b;
        }

        /* Loading spinner */
        .loading-spinner {
            display: none;
        }
        
        /* Loading animation */
        .animate-spin {
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            from {
                transform: rotate(0deg);
            }
            to {
                transform: rotate(360deg);
            }
        }
        
        /* Geolocation button states */
        .geolocation-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }

        ::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .dark ::-webkit-scrollbar-track {
            background: #1e1e1e;
        }

        ::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

        ::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
    </style>
</head>
