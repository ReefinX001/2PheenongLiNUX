        // Select zone
        function selectZone(zoneId, zoneName, targetElement = null, zoneData = null) {
            console.log('🔍 Selecting zone:', { zoneId, zoneName, zoneData });
            
            // Remove active class from all zone cards
            document.querySelectorAll('.zone-card').forEach(card => {
                card.classList.remove('active');
                card.classList.remove('border-green-500');
                card.classList.add('border-indigo-500');
            });

            // Add active class to selected zone
            // Use targetElement if provided, otherwise find by data attribute or ID
            let selectedCard = targetElement;
            if (!selectedCard && typeof event !== 'undefined' && event.currentTarget) {
                selectedCard = event.currentTarget;
            }
            if (!selectedCard) {
                selectedCard = document.querySelector(`[data-zone-id="${zoneId}"]`);
            }

            if (selectedCard) {
                selectedCard.classList.add('active');
                selectedCard.classList.remove('border-indigo-500');
                selectedCard.classList.add('border-green-500');
            }
            
            currentZoneId = zoneId;
            currentZoneName = zoneName;
            currentZoneData = zoneData;
            
            // เก็บ zone data ใน window object ด้วย
            window.currentZoneData = zoneData;
            
            const selectedZoneNameEl = document.getElementById('selectedZoneName');
            if (selectedZoneNameEl) selectedZoneNameEl.textContent = zoneName;
            
            const scheduleManagementCard = document.getElementById('scheduleManagementCard');
            if (scheduleManagementCard) scheduleManagementCard.style.display = 'block';
            
            // Load data for selected zone in parallel
            const dataPromises = [loadEmployees()];

            if (currentTab === 'schedules') {
                dataPromises.push(loadActiveSchedules());
            } else if (currentTab === 'attendance') {
                dataPromises.push(loadTodayAttendance());
            } else if (currentTab === 'overtime') {
                dataPromises.push(loadOvertimeData());
            }

            Promise.all(dataPromises).catch(error => {
                console.error('Error loading zone data:', error);
            });

            // Show quick stats
            document.getElementById('quickStats').style.display = 'grid';
        }

