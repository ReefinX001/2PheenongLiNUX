        // Open in Google Maps
        function openInGoogleMaps() {
            if (!currentViewerZone) return;
            
            const { lat, lng, name } = currentViewerZone;
            const url = `https://www.google.com/maps?q=${lat},${lng}&z=16&t=m`;
            window.open(url, '_blank');
        }

        // Copy coordinates to clipboard
        function copyCoordinates() {
            if (!currentViewerZone) return;
            
            const { lat, lng } = currentViewerZone;
            const coords = `${lat.toFixed(6)}, ${lng.toFixed(6)}`;
            
            navigator.clipboard.writeText(coords).then(() => {
                showAlert('success', 'คัดลอกพิกัดแล้ว: ' + coords);
            }).catch(() => {
                // Fallback for older browsers
                const textArea = document.createElement('textarea');
                textArea.value = coords;
                document.body.appendChild(textArea);
                textArea.select();
                document.execCommand('copy');
                document.body.removeChild(textArea);
                showAlert('success', 'คัดลอกพิกัดแล้ว: ' + coords);
            });
        }

        // Add event listeners for edit mode
        function addViewerEditListeners() {
            const latInput = document.getElementById('editZoneLat');
            const lngInput = document.getElementById('editZoneLng');
            const radiusInput = document.getElementById('editZoneRadius');
            const nameInput = document.getElementById('editZoneName');
            
            // Update map when coordinates change
            latInput.addEventListener('input', updateViewerMapFromInputs);
            lngInput.addEventListener('input', updateViewerMapFromInputs);
            
            // Update circle when radius changes
            radiusInput.addEventListener('input', function() {
                const newRadius = parseInt(this.value) || 100;
                currentViewerZone.radius = newRadius;
                if (viewerCircle) {
                    viewerCircle.setRadius(newRadius);
                }
            });
            
            // Update zone name
            nameInput.addEventListener('input', function() {
                currentViewerZone.name = this.value;
            });
        }

        // Remove event listeners
        function removeViewerEditListeners() {
            const latInput = document.getElementById('editZoneLat');
            const lngInput = document.getElementById('editZoneLng');
            const radiusInput = document.getElementById('editZoneRadius');
            const nameInput = document.getElementById('editZoneName');
            
            latInput.removeEventListener('input', updateViewerMapFromInputs);
            lngInput.removeEventListener('input', updateViewerMapFromInputs);
            radiusInput.removeEventListener('input', updateViewerMapFromInputs);
            nameInput.removeEventListener('input', updateViewerMapFromInputs);
        }

        // Update viewer map from input values
        function updateViewerMapFromInputs() {
            if (!viewerMap || !viewerMarker || !viewerCircle) return;
            
            const lat = parseFloat(document.getElementById('editZoneLat').value);
            const lng = parseFloat(document.getElementById('editZoneLng').value);
            
            if (isNaN(lat) || isNaN(lng)) return;
            
            const newPosition = { lat: lat, lng: lng };
            
            // Update current zone data
            currentViewerZone.lat = lat;
            currentViewerZone.lng = lng;
            
            // Update marker position
            if (viewerMarker.position && typeof viewerMarker.position === 'object') {
                viewerMarker.position = newPosition;
            } else if (viewerMarker.setPosition) {
                viewerMarker.setPosition(newPosition);
            }
            
            // Update circle position
            viewerCircle.setCenter(newPosition);
            
            // Center map on new position
            viewerMap.setCenter(newPosition);
        }

        // Update viewer map from current zone data
        function updateViewerMapFromData() {
            if (!viewerMap || !viewerMarker || !viewerCircle || !currentViewerZone) return;
            
            const { lat, lng, radius } = currentViewerZone;
            const position = { lat: lat, lng: lng };
            
            // Update marker position
            if (viewerMarker.position && typeof viewerMarker.position === 'object') {
                viewerMarker.position = position;
            } else if (viewerMarker.setPosition) {
                viewerMarker.setPosition(position);
            }
            
            // Update circle
            viewerCircle.setCenter(position);
            viewerCircle.setRadius(radius);
            
            // Center map
            viewerMap.setCenter(position);
        }

        // Save zone changes
        async function saveZoneChanges() {
            if (!currentViewerZone) return;
            
            try {
                // Get values from inputs
                const name = document.getElementById('editZoneName').value.trim();
                const lat = parseFloat(document.getElementById('editZoneLat').value);
                const lng = parseFloat(document.getElementById('editZoneLng').value);
                const radius = parseInt(document.getElementById('editZoneRadius').value);
                
                // Validation
                if (!name) {
                    showAlert('error', 'กรุณากรอกชื่อพื้นที่');
                    return;
                }
                
                if (isNaN(lat) || isNaN(lng)) {
                    showAlert('error', 'กรุณากรอกพิกัดให้ถูกต้อง');
                    return;
                }
                
                if (isNaN(radius) || radius < 1) {
                    showAlert('error', 'กรุณากรอกรัศมีให้ถูกต้อง (ต้องมากกว่า 0)');
                    return;
                }
                
                // Show confirmation
                const result = await Swal.fire({
                    title: 'ยืนยันการบันทึก',
                    html: `
                        <div class="text-left">
                            <p><strong>ชื่อพื้นที่:</strong> ${name}</p>
                            <p><strong>พิกัด:</strong> ${lat.toFixed(6)}, ${lng.toFixed(6)}</p>
                            <p><strong>รัศมี:</strong> ${radius} เมตร</p>
                        </div>
                    `,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'บันทึก',
                    cancelButtonText: 'ยกเลิก'
                });
                
                if (!result.isConfirmed) return;
                
                // Show loading
                Swal.fire({
                    title: 'กำลังบันทึก...',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });
                
                // Here you would make API call to update the zone
                // For now, we'll simulate it
                await new Promise(resolve => setTimeout(resolve, 1000));
                
                // Update current zone data
                currentViewerZone = { lat, lng, radius, name };
                originalZoneData = { lat, lng, radius, name };
                
                // Exit edit mode
                isEditingZone = false;
                setViewerEditMode(false);
                updateViewerZoneInfo();
                
                Swal.close();
                showAlert('success', 'บันทึกข้อมูลพื้นที่เรียบร้อยแล้ว');
                
                // Refresh zone management data
                loadZoneManagementData();
                
            } catch (error) {
                console.error('Error saving zone changes:', error);
                Swal.close();
                showAlert('error', 'เกิดข้อผิดพลาดในการบันทึก: ' + error.message);
            }
        }

        // Logout function
        function logout(showAlert = true) {
            const btnDropdown = document.getElementById('btnLogoutDropdown');
            const userBtnAvatar = document.getElementById('userBtn');

            if(btnDropdown) btnDropdown.innerHTML = '<span class="loading loading-spinner loading-sm mx-auto"></span> <span class="ml-2">กำลังออก...</span>';
            if(userBtnAvatar) userBtnAvatar.innerHTML = '<div class="w-8 h-8 rounded-full flex items-center justify-center"><span class="loading loading-spinner loading-xs"></span></div>';

            setTimeout(() => {
                localStorage.removeItem('authToken');
                localStorage.removeItem('userId');
                if (showAlert) {
                    alert('ออกจากระบบแล้ว');
                }
                window.location.href = 'login.html';
            }, 500);
        }

        // ===== EMPLOYEE SELECTION FUNCTIONALITY =====
        let selectedEmployees = new Set();

        // Handle individual employee selection
        function handleEmployeeSelection(checkbox) {
            const employeeId = checkbox.value;
            const employeeName = checkbox.dataset.employeeName;
            const employeeCode = checkbox.dataset.employeeCode;
            const branches = JSON.parse(checkbox.dataset.branches || '[]');

            if (checkbox.checked) {
                selectedEmployees.add({
                    id: employeeId,
                    name: employeeName,
                    code: employeeCode,
                    branches: branches
                });
            } else {
                selectedEmployees.forEach(emp => {
                    if (emp.id === employeeId) {
                        selectedEmployees.delete(emp);
                    }
                });
            }

            updateSelectedEmployeesDisplay();
            updateSelectAllCheckbox();
        }

        // Toggle all employees
        function toggleAllEmployees(selectAllCheckbox) {
            const checkboxes = document.querySelectorAll('.employee-checkbox');

            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAllCheckbox.checked;
                handleEmployeeSelection(checkbox);
            });
        }

        // Update the "Select All" checkbox state
        function updateSelectAllCheckbox() {
            const selectAllCheckbox = document.getElementById('selectAllEmployees');
            const checkboxes = document.querySelectorAll('.employee-checkbox');
            const checkedBoxes = document.querySelectorAll('.employee-checkbox:checked');

            if (checkedBoxes.length === 0) {
                selectAllCheckbox.indeterminate = false;
                selectAllCheckbox.checked = false;
            } else if (checkedBoxes.length === checkboxes.length) {
                selectAllCheckbox.indeterminate = false;
                selectAllCheckbox.checked = true;
            } else {
                selectAllCheckbox.indeterminate = true;
                selectAllCheckbox.checked = false;
            }
        }

        // Update selected employees display
        function updateSelectedEmployeesDisplay() {
            const panel = document.getElementById('selectedEmployeesPanel');
            const count = document.getElementById('selectedCount');
            const list = document.getElementById('selectedEmployeesList');

            count.textContent = selectedEmployees.size;

            if (selectedEmployees.size === 0) {
                panel.classList.add('hidden');
                return;
            }

            panel.classList.remove('hidden');
            list.innerHTML = '';

            selectedEmployees.forEach(employee => {
                const badge = document.createElement('span');
                badge.className = 'inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200';
                badge.innerHTML = `
                    ${employee.code} - ${employee.name}
                    <button onclick="removeEmployeeSelection('${employee.id}')" class="ml-2 text-blue-600 hover:text-blue-800">
                        <i class="bi bi-x"></i>
                    </button>
                `;
                list.appendChild(badge);
            });
        }

        // Remove individual employee from selection
        function removeEmployeeSelection(employeeId) {
            const checkbox = document.querySelector(`.employee-checkbox[value="${employeeId}"]`);
            if (checkbox) {
                checkbox.checked = false;
                handleEmployeeSelection(checkbox);
            }
        }

        // Clear all selections
        function clearAllSelections() {
            selectedEmployees.clear();
            document.querySelectorAll('.employee-checkbox').forEach(checkbox => {
                checkbox.checked = false;
            });
            updateSelectedEmployeesDisplay();
            updateSelectAllCheckbox();
        }

        // Perform bulk actions on selected employees
        function performBulkAction(action) {
            if (selectedEmployees.size === 0) {
                showAlert('warning', 'กรุณาเลือกพนักงานก่อนทำการดำเนินการ');
                return;
            }

            const selectedArray = Array.from(selectedEmployees);

            switch (action) {
                case 'schedule':
                    handleBulkScheduleAction(selectedArray);
                    break;
                case 'export':
                    handleBulkExportAction(selectedArray);
                    break;
                default:
                    console.warn('Unknown bulk action:', action);
            }
        }

        // Handle bulk schedule action
        function handleBulkScheduleAction(employees) {
            // Show available branches from selected employees
            const allBranches = new Set();
            employees.forEach(emp => {
                if (emp.branches && emp.branches.length > 0) {
                    emp.branches.forEach(branch => allBranches.add(JSON.stringify(branch)));
                }
            });

            if (allBranches.size === 0) {
                showAlert('warning', 'พนักงานที่เลือกไม่มีข้อมูลสาขาที่สามารถเช็คอินได้');
                return;
            }

            // Show modal with branch selection and schedule options
            Swal.fire({
                title: 'จัดการตารางงานพนักงาน',
                html: `
                    <div class="text-left space-y-4">
                        <div>
                            <label class="block text-sm font-medium mb-2">พนักงานที่เลือก (${employees.length} คน)</label>
                            <div class="bg-gray-100 p-2 rounded text-sm max-h-20 overflow-y-auto">
                                ${employees.map(emp => emp.code + ' - ' + emp.name).join('<br>')}
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-2">สาขาที่สามารถเช็คอินได้</label>
                            <select id="bulkBranchSelect" class="w-full p-2 border rounded">
                                <option value="">เลือกสาขา</option>
                                ${Array.from(allBranches).map(branchStr => {
                                    const branch = JSON.parse(branchStr);
                                    return `<option value="${branch._id}">${branch.name}</option>`;
                                }).join('')}
                            </select>
                        </div>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium mb-2">เวลาเริ่มงาน</label>
                                <input type="time" id="bulkStartTime" class="w-full p-2 border rounded" value="09:00">
                            </div>
                            <div>
                                <label class="block text-sm font-medium mb-2">เวลาเลิกงาน</label>
                                <input type="time" id="bulkEndTime" class="w-full p-2 border rounded" value="18:00">
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium mb-2">วันที่มีผล</label>
                            <input type="date" id="bulkEffectiveDate" class="w-full p-2 border rounded" value="${new Date().toISOString().split('T')[0]}">
                        </div>
                    </div>
                `,
                showCancelButton: true,
                confirmButtonText: 'บันทึกตารางงาน',
                cancelButtonText: 'ยกเลิก',
                preConfirm: () => {
                    const branchId = document.getElementById('bulkBranchSelect').value;
                    const startTime = document.getElementById('bulkStartTime').value;
                    const endTime = document.getElementById('bulkEndTime').value;
                    const effectiveDate = document.getElementById('bulkEffectiveDate').value;

                    if (!branchId || !startTime || !endTime || !effectiveDate) {
                        Swal.showValidationMessage('กรุณากรอกข้อมูลให้ครบถ้วน');
                        return false;
                    }

                    return { branchId, startTime, endTime, effectiveDate };
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    console.log('Bulk schedule data:', result.value);
                    console.log('Selected employees:', employees);
                    showAlert('success', `จัดการตารางงานสำหรับพนักงาน ${employees.length} คน เรียบร้อยแล้ว`);
                    // Here you would make API call to create schedules for all selected employees
                }
            });
        }

        // Handle bulk export action
        function handleBulkExportAction(employees) {
            const csvData = [
                ['รหัสพนักงาน', 'ชื่อ-นามสกุล', 'สาขาที่สามารถเช็คอิน'],
                ...employees.map(emp => [
                    emp.code,
                    emp.name,
                    emp.branches ? emp.branches.map(b => b.name).join(', ') : 'ไม่มีข้อมูล'
                ])
            ];

            const csvContent = csvData.map(row => row.join(',')).join('\n');
            const blob = new Blob(['\uFEFF' + csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            const url = URL.createObjectURL(blob);
            link.setAttribute('href', url);
            link.setAttribute('download', `พนักงานที่เลือก_${new Date().toISOString().split('T')[0]}.csv`);
            link.style.visibility = 'hidden';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);

            showAlert('success', `ส่งออกข้อมูลพนักงาน ${employees.length} คน เรียบร้อยแล้ว`);
        }
    </script>
</body>
</html>