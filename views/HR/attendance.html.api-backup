        // Format schedule display
        function formatScheduleDisplay(schedule) {
            if (!schedule) return '<small class="text-gray-500 dark:text-gray-400">ไม่มีข้อมูล</small>';
            
            let display = '<small class="text-green-600 dark:text-green-400">';
            
            if (schedule.workType === 'regular' && schedule.regularSchedule) {
                const periods = schedule.regularSchedule.periods || [];
                if (periods.length > 0) {
                    display += `<i class="bi bi-clock mr-1"></i>${periods.map(p => `${p.startTime}-${p.endTime}`).join(', ')}<br>`;
                }
                
                const workDays = schedule.regularSchedule.workDays || [];
                if (workDays.length > 0) {
                    display += `<i class="bi bi-calendar mr-1"></i>${getWorkDaysText(workDays)}`;
                }
            } else if (schedule.workType === 'shift' && schedule.shiftSchedule) {
                display += `<i class="bi bi-clock mr-1"></i>${schedule.shiftSchedule.startTime}-${schedule.shiftSchedule.endTime}<br>`;
                display += `<i class="bi bi-arrow-repeat mr-1"></i>${getWorkTypeText(schedule.workType)}`;
            } else if (schedule.workType === 'flexible') {
                display += `<i class="bi bi-clock mr-1"></i>เวลายืดหยุ่น<br>`;
                display += `<i class="bi bi-calendar mr-1"></i>ตามความเหมาะสม`;
            }
            
            display += '</small>';
            return display;
        }

