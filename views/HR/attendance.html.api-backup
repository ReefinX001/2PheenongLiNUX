        // Set viewer edit mode
        function setViewerEditMode(editMode) {
            const viewInfo = document.getElementById('viewerZoneInfo');
            const editInfo = document.getElementById('viewerZoneEdit');
            const editBtn = document.getElementById('editZoneBtn');
            const saveBtn = document.getElementById('saveZoneBtn');
            const cancelBtn = document.getElementById('cancelZoneBtn');
            
            if (editMode) {
                viewInfo.classList.add('hidden');
                editInfo.classList.remove('hidden');
                editBtn.classList.add('hidden');
                saveBtn.classList.remove('hidden');
                cancelBtn.classList.remove('hidden');
                
                // Make marker draggable
                if (viewerMarker && viewerMarker.setDraggable) {
                    viewerMarker.setDraggable(true);
                } else if (viewerMarker && viewerMarker.gmpDraggable !== undefined) {
                    viewerMarker.gmpDraggable = true;
                }
                
                // Add input event listeners
                addViewerEditListeners();
            } else {
                viewInfo.classList.remove('hidden');
                editInfo.classList.add('hidden');
                editBtn.classList.remove('hidden');
                saveBtn.classList.add('hidden');
                cancelBtn.classList.add('hidden');
                
                // Make marker non-draggable
                if (viewerMarker && viewerMarker.setDraggable) {
                    viewerMarker.setDraggable(false);
                } else if (viewerMarker && viewerMarker.gmpDraggable !== undefined) {
                    viewerMarker.gmpDraggable = false;
                }
                
                // Remove input event listeners
                removeViewerEditListeners();
            }
        }

        // Toggle zone edit mode
        function toggleZoneEdit() {
            isEditingZone = true;
            setViewerEditMode(true);
            updateViewerZoneInfo();
        }

        // Cancel zone edit
        function cancelZoneEdit() {
            // Restore original data
            currentViewerZone = { ...originalZoneData };
            
            // Update map
            updateViewerMapFromData();
            
            // Exit edit mode
            isEditingZone = false;
            setViewerEditMode(false);
            updateViewerZoneInfo();
        }

        // Initialize zone map viewer
        function initZoneMapViewer(lat, lng, radius, zoneName) {
            const mapElement = document.getElementById('zoneMapViewer');
            
            if (!isGoogleMapsLoaded) {
                mapElement.innerHTML = `
                    <div class="flex items-center justify-center h-full bg-gray-50 border-2 border-gray-200 rounded-lg">
                        <div class="text-center">
                            <i class="bi bi-arrow-clockwise animate-spin text-3xl text-gray-400 mb-2"></i>
                            <p class="text-gray-600">กำลังโหลดแผนที่...</p>
                        </div>
                    </div>
                `;
                
                // Try again after a delay
                setTimeout(() => {
                    if (isGoogleMapsLoaded) {
                        initZoneMapViewer(lat, lng, radius, zoneName);
                    } else {
                        showZoneMapViewerFallback(lat, lng, radius, zoneName);
                    }
                }, 2000);
                return;
            }

            try {
                const center = { lat: lat, lng: lng };
                
                // Initialize viewer map
                viewerMap = new google.maps.Map(mapElement, {
                    zoom: 16,
                    center: center,
                    mapTypeId: google.maps.MapTypeId.ROADMAP,
                    streetViewControl: true,
                    mapTypeControl: true,
                    fullscreenControl: true,
                    zoomControl: true
                });

                // Add marker
                if (google.maps.marker && google.maps.marker.AdvancedMarkerElement) {
                    viewerMarker = new google.maps.marker.AdvancedMarkerElement({
                        position: center,
                        map: viewerMap,
                        title: `พื้นที่เช็คอิน: ${zoneName}`
                    });
                } else {
                    viewerMarker = new google.maps.Marker({
                        position: center,
                        map: viewerMap,
                        title: `พื้นที่เช็คอิน: ${zoneName}`
                    });
                }

                // Add circle
                viewerCircle = new google.maps.Circle({
                    strokeColor: '#10B981',
                    strokeOpacity: 0.8,
                    strokeWeight: 3,
                    fillColor: '#10B981',
                    fillOpacity: 0.15,
                    map: viewerMap,
                    center: center,
                    radius: radius
                });

                // Add info window
                const infoWindow = new google.maps.InfoWindow({
                    content: `
                        <div class="p-2">
                            <h4 class="font-semibold text-gray-900 mb-2">${zoneName}</h4>
                            <div class="text-sm text-gray-600 space-y-1">
                                <p><strong>พิกัด:</strong> ${lat.toFixed(6)}, ${lng.toFixed(6)}</p>
                                <p><strong>รัศมี:</strong> ${radius} เมตร</p>
                                <p><strong>พื้นที่:</strong> ${Math.round(Math.PI * radius * radius)} ตร.ม.</p>
                            </div>
                        </div>
                    `
                });

                // Show info window on marker click
                if (viewerMarker.addListener) {
                    viewerMarker.addListener('click', () => {
                        infoWindow.open(viewerMap, viewerMarker);
                    });
                    
                    // Add drag end listener for editing
                    viewerMarker.addListener('dragend', function(event) {
                        if (isEditingZone) {
                            let lat, lng;
                            
                            if (event.latLng) {
                                lat = event.latLng.lat();
                                lng = event.latLng.lng();
                            } else if (viewerMarker.position) {
                                lat = viewerMarker.position.lat;
                                lng = viewerMarker.position.lng;
                            }
                            
                            if (lat && lng) {
                                // Update current zone data
                                currentViewerZone.lat = lat;
                                currentViewerZone.lng = lng;
                                
                                // Update inputs
                                document.getElementById('editZoneLat').value = lat.toFixed(6);
                                document.getElementById('editZoneLng').value = lng.toFixed(6);
                                
                                // Update circle position
                                if (viewerCircle) {
                                    viewerCircle.setCenter({ lat: lat, lng: lng });
                                }
                                
                                showAlert('info', 'ตำแหน่งได้รับการอัปเดตแล้ว');
                            }
                        }
                    });
                }

                console.log('Zone map viewer initialized successfully');
                
            } catch (error) {
                console.error('Error initializing zone map viewer:', error);
                showZoneMapViewerFallback(lat, lng, radius, zoneName);
            }
        }

        // Show fallback when Google Maps fails
        function showZoneMapViewerFallback(lat, lng, radius, zoneName) {
            const mapElement = document.getElementById('zoneMapViewer');
            mapElement.innerHTML = `
                <div class="flex items-center justify-center h-full bg-red-50 border-2 border-red-200 rounded-lg">
                    <div class="text-center p-6">
                        <i class="bi bi-exclamation-triangle text-4xl text-red-500 mb-3"></i>
                        <h4 class="text-lg font-semibold text-red-800 mb-2">ไม่สามารถโหลดแผนที่ได้</h4>
                        <p class="text-sm text-red-600 mb-4">Google Maps API ไม่พร้อมใช้งาน</p>
                        <div class="space-y-2">
                            <button onclick="openInGoogleMaps()" class="btn btn-sm btn-primary">
                                <i class="bi bi-box-arrow-up-right mr-1"></i> เปิดใน Google Maps
                            </button>
                            <button onclick="copyCoordinates()" class="btn btn-sm btn-outline">
