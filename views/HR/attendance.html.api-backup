    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Google Maps API -->
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBA0Qs-rHslLghMCAmbLplx_zMNjeY7TZE&libraries=geometry&callback=initGoogleMaps"></script>
    
    <script>
        const API_BASE = '/api';
        const token = localStorage.getItem('authToken');
        
        // Global variables
        let currentZoneId = null;
        let currentZoneName = null;
        let currentZoneData = null;
        let scheduleTemplates = {};
        let currentTab = 'employees';
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            if (!token) {
                showAlert('error', 'ไม่พบ Token การเข้าสู่ระบบ กรุณาเข้าสู่ระบบใหม่');
                setTimeout(() => {
                    window.location.href = 'login.html';
                }, 2000);
                return;
            }
            
            initSidebar();
            setupEventListeners();

            // Load zones and templates in parallel
            Promise.all([
                loadZones(),
                loadScheduleTemplates()
            ]).then(() => {
                // Data will be loaded when zone is selected
                console.log('Initial setup complete');
            }).catch(error => {
                console.error('Error during initial setup:', error);
            });
            
            // Set default date to today
            const today = new Date().toISOString().split('T')[0];
            const effectiveFromInputs = document.querySelectorAll('#effectiveFrom, #bulkEffectiveFrom');
            effectiveFromInputs.forEach(input => {
                if (input) input.value = today;
            });
        });

        // Initialize sidebar (from HR Dashboard)
        function initSidebar() {
            setupSidebarEventListeners();
            checkDarkMode();
            fetchUserProfile();
        }

        function setupSidebarEventListeners() {
            const sidebar = document.getElementById('sidebar');
            const btnToggleMenu = document.getElementById('btnToggleMenu');
            const btnToggleDark = document.getElementById('btnToggleDark');
            const btnLogoutSidebar = document.getElementById('btnLogoutSidebar');

            // Toggle sidebar
            if (btnToggleMenu) {
                btnToggleMenu.addEventListener('click', () => {
                    if (sidebar) {
                        sidebar.classList.toggle('-translate-x-64');
                        const mainContent = document.getElementById('mainContent');
                        if (mainContent) {
                            mainContent.classList.toggle('ml-64');
                            mainContent.classList.toggle('ml-0');
                        }
                    }
                    const icon = btnToggleMenu.querySelector('i');
                    if (icon) {
                        icon.classList.toggle('bi-chevron-left');
                        icon.classList.toggle('bi-chevron-right');
                    }
                });
            }

            // Dark mode toggle
            if (btnToggleDark) {
                btnToggleDark.addEventListener('click', () => {
                    const isDark = document.documentElement.classList.toggle('dark');
                    const theme = isDark ? 'dark' : 'light';
                    document.documentElement.setAttribute('data-theme', theme);
                    localStorage.setItem('theme', theme);
                    const label = document.getElementById('darkModeLabel');
                    if (label) {
                        label.textContent = isDark ? 'Light Mode' : 'Dark Mode';
                    }
                });
            }

            // Logout
            if (btnLogoutSidebar) {
                btnLogoutSidebar.addEventListener('click', logout);
            }

            // Menu toggle สำหรับ responsive
            const menuToggle = document.getElementById('menuToggle');
            if (menuToggle && sidebar) {
                menuToggle.addEventListener('click', () => {
                    sidebar.classList.toggle('-translate-x-64');
                    const mainContent = document.getElementById('mainContent');
                    if (mainContent) {
                        mainContent.classList.toggle('ml-64');
                        mainContent.classList.toggle('ml-0');
                    }
                });
            }
        }

        function checkDarkMode() {
            const storedTheme = localStorage.getItem('theme');
            const dark = storedTheme === 'dark';
            document.documentElement.classList.toggle('dark', dark);
            if (storedTheme) {
                document.documentElement.setAttribute('data-theme', storedTheme);
            }
            const label = document.getElementById('darkModeLabel');
            if (label) {
                label.textContent = dark ? 'Light Mode' : 'Dark Mode';
            }
        }

        async function fetchUserProfile() {
            try {
                const res = await fetch(`${API_BASE}/users/me`, {
                    headers: { 'Authorization': 'Bearer ' + token }
                });
                
                if (res.ok) {
                    const json = await res.json();
                    if (json.success) {
                        const userName = json.data.name || json.data.username || 'ผู้ใช้';
                        const employeeNameEl = document.getElementById('employeeName');
                        const employeePhotoEl = document.getElementById('employeePhoto');
                        
                        if (employeeNameEl) {
                            employeeNameEl.textContent = userName;
                        }
                        
                        if (employeePhotoEl) {
                            const photoUrl = resolvePhotoUrl(json.data.photoUrl);
                            if (photoUrl && photoUrl !== '/uploads/employees/default.png') {
                                employeePhotoEl.innerHTML = `<img src="${photoUrl}" alt="Employee Photo" class="w-10 h-10 rounded-full object-cover">`;
                            } else {
                                employeePhotoEl.innerHTML = `<i class="bi bi-person text-gray-600 dark:text-gray-300"></i>`;
                            }
                        }

                        // อัปเดต user initial ถ้ามี
                        const initialEl = document.getElementById('userInitial');
                        if (initialEl) {
                            initialEl.textContent = userName.charAt(0).toUpperCase();
                        }
                    } else {
                        throw new Error(json.message || 'Failed to load profile');
                    }
                } else if (res.status === 401) {
                    console.log('Unauthorized, redirecting to login');
                    logout(false);
                } else {
                    console.log('User API not available');
                    showAlert('warning', 'ไม่สามารถโหลดข้อมูลผู้ใช้ได้');
                }

            } catch (err) {
                console.error('fetchUserProfile:', err);
                showAlert('error', 'เกิดข้อผิดพลาดในการโหลดข้อมูลผู้ใช้: ' + err.message);
            }
        }

        function resolvePhotoUrl(raw) {
            if (!raw) return null;
            if (/^https?:\/\//.test(raw)) return raw;
            if (raw.startsWith('/uploads/employees/')) return raw;
            if (raw.startsWith('/uploads/')) return raw.replace(/^\/uploads\//, '/uploads/employees/');
            return '/uploads/employees/' + raw;
        }

        function setupEventListeners() {
            // Notification และ User dropdowns
            const notificationBtn = document.getElementById('notificationBtn');
            const userBtn = document.getElementById('userBtn');
            const btnLogoutDropdown = document.getElementById('btnLogoutDropdown');

            if(notificationBtn) notificationBtn.addEventListener('click', e => {
                e.stopPropagation();
                document.getElementById('notificationDropdown')?.classList.toggle('hidden');
                document.getElementById('userDropdown')?.classList.add('hidden');
            });

            if(userBtn) userBtn.addEventListener('click', e => {
                e.stopPropagation();
                document.getElementById('userDropdown')?.classList.toggle('hidden');
                document.getElementById('notificationDropdown')?.classList.add('hidden');
            });

            if(btnLogoutDropdown) btnLogoutDropdown.addEventListener('click', logout);

            // Outside click handlers
            document.addEventListener('click', e => {
                const notificationDropdown = document.getElementById('notificationDropdown');
                const userDropdown = document.getElementById('userDropdown');

                if (notificationDropdown && !e.target.closest('#notificationBtn') && !e.target.closest('#notificationDropdown')) {
                    notificationDropdown.classList.add('hidden');
                }
                if (userDropdown && !e.target.closest('#userBtn') && !e.target.closest('#userDropdown')) {
                    userDropdown.classList.add('hidden');
                }
            });
        }

        // Tab switching function
        function switchTab(tabName) {
            // Update tab buttons
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('tab-active');
            });
            document.getElementById(tabName + '-tab').classList.add('tab-active');

            // Update tab content
            document.querySelectorAll('.tab-content-panel').forEach(panel => {
                panel.classList.add('hidden');
            });
            document.getElementById(tabName).classList.remove('hidden');

            currentTab = tabName;

            // Load data for the selected tab
            if (tabName === 'schedules') {
                loadActiveSchedules();
            } else if (tabName === 'attendance') {
                loadTodayAttendance();
            } else if (tabName === 'overtime') {
                loadOvertimeData();
            }
        }
        
        // Load zones
        async function loadZones() {
            try {
                const loadingSpinner = document.querySelector('.loading-spinner');
                if (loadingSpinner) loadingSpinner.style.display = 'block';
                
                // Debug token
                if (!token) {
                    showAlert('error', 'ไม่พบ Token การเข้าสู่ระบบ');
                    return;
                }
                
                console.log('Loading zones with token:', token ? 'Token exists' : 'No token');
                console.log('API URL:', '/api/zone');
                
                const response = await fetch('/api/zone', {
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });
                
                console.log('Response status:', response.status);
                console.log('Response headers:', Object.fromEntries(response.headers.entries()));
                
                if (response.ok) {
                    const result = await response.json();
                    console.log('API Response:', result);
                    
                    if (result.success) {
                        displayZones(result.data);

                        // Auto select first zone if available and no zone selected
                        if (result.data && result.data.length > 0 && !currentZoneId) {
                            const firstZone = result.data[0];
                            setTimeout(() => {
                                selectZone(firstZone._id || firstZone.id, firstZone.name, null, firstZone);
                            }, 100);
                        }

                        // Show warning if using mock data
                        if (result.message && result.message.includes('ข้อมูลทดสอบ')) {
                            showAlert('warning', result.message);
                        }
                    } else {
                        showAlert('error', 'ไม่สามารถโหลดข้อมูลพื้นที่เช็คอินได้: ' + (result.error || result.message));
                        displayZones([]);
                    }
                } else {
                    // Try to get error message from response
                    let errorMessage = `HTTP ${response.status}`;
                    try {
                        const errorResult = await response.json();
                        if (errorResult.error || errorResult.message) {
                            errorMessage += ': ' + (errorResult.error || errorResult.message);
                        }
                    } catch (e) {
                        // If can't parse JSON, use status text
                        errorMessage += ': ' + response.statusText;
                    }
                    
                    showAlert('error', `ไม่สามารถโหลดข้อมูลพื้นที่เช็คอินได้ (${errorMessage})`);
                    displayZones([]);
                    
                    // If 401, redirect to login
                    if (response.status === 401) {
                        setTimeout(() => {
                            window.location.href = 'login.html';
                        }, 2000);
                    }
                }
            } catch (error) {
                console.error('Error loading zones:', error);
                console.error('Token used:', token ? 'Present' : 'Missing');
                console.error('API URL:', '/api/zone');
                showAlert('error', 'เกิดข้อผิดพลาดในการโหลดข้อมูลพื้นที่เช็คอิน: ' + error.message);
                displayZones([]);
            } finally {
                const loadingSpinner = document.querySelector('.loading-spinner');
                if (loadingSpinner) loadingSpinner.style.display = 'none';
            }
        }
        
        // Display zones
        function displayZones(zones) {
            const container = document.getElementById('zoneContainer');
            container.innerHTML = '';
            
            if (!zones || zones.length === 0) {
                container.innerHTML = `
                    <div class="col-span-full text-center">
                        <div class="alert alert-warning bg-yellow-50 border border-yellow-200 text-yellow-800 px-4 py-3 rounded-lg">
                            <i class="bi bi-exclamation-triangle mr-2"></i>
                            ไม่พบพื้นที่เช็คอินที่คุณสามารถเข้าถึงได้<br>
                            <small class="text-sm">กรุณาตรวจสอบว่าคุณได้รับการกำหนดสิทธิ์เข้าถึงสาขา/พื้นที่เช็คอินแล้ว หรือติดต่อผู้ดูแลระบบ</small>
                        </div>
                    </div>
                `;

                // Show quickStats with zeros and explanation when no zones available
                document.getElementById('quickStats').style.display = 'grid';
                updateQuickStats(0, 0, 0, 0);

                return;
            }
            
            zones.forEach((zone, index) => {
                console.log(`Zone ${index}:`, zone);
                console.log(`Zone ${index} branchId:`, zone.branchId);
                console.log(`Zone ${index} branch:`, zone.branch);
                
                const zoneCard = document.createElement('div');
                zoneCard.className = 'zone-card card p-4 bg-white dark:bg-gray-800 rounded-lg shadow border-l-4 border-indigo-500 hover:border-green-500';
                zoneCard.setAttribute('data-zone-id', zone._id);
                zoneCard.onclick = (event) => selectZone(zone._id, zone.name, event.currentTarget, zone);
                
                zoneCard.innerHTML = `
                    <div>
                        <h6 class="font-semibold text-lg mb-2">
                            <i class="bi bi-geo-alt text-indigo-600 mr-2"></i>
                            ${zone.name}
                        </h6>
                        <p class="text-gray-500 dark:text-gray-400 text-sm mb-2">
                            รัศมี: ${zone.radius ? `${zone.radius} เมตร` : 'ไม่ระบุ'}
                        </p>
                        ${zone.center ? `
                            <p class="text-gray-500 dark:text-gray-400 text-sm mb-3">
                                <i class="bi bi-geo mr-1"></i>
