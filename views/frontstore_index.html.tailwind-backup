          <div class="flex items-center gap-2 px-2">
            <i class="bi bi-calendar-check text-green-500"></i>
            <span id="currentDate" class="text-base font-medium"></span>
          </div>
        </div>
        <div class="divider divider-horizontal mx-0"></div>
