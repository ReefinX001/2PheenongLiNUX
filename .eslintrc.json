{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "plugins": ["html"],
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "public/socket.io.min.js",
    "**/à¸ºBackup/**",
    "**/account backup/**",
    "views/BOSS/**",
    "ZKFinger SDK*/**",
    "Keep/**",
    "examples/**",
    "fix-lint-errors.js"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-undef": "warn",
    "quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "semi": ["error", "always"],
    "no-trailing-spaces": "warn"
  },
  "globals": {
    "tailwind": "readonly",
    "LoadingSystem": "readonly",
    "lottie": "readonly",
    "Chart": "readonly",
    "dayjs": "readonly",
    "XLSX": "readonly",
    "html2pdf": "readonly",
    "showLoading": "readonly",
    "fetchUserProfile": "readonly",
    "resolvePhotoUrl": "readonly",
    "logout": "readonly",
    "API_BASE": "readonly",
    "token": "readonly"
  },
  "overrides": [
    {
      "files": ["*.html"],
      "processor": "html/html"
    },
    {
      "files": [
        "middlewares/**/*.js",
        "utils/**/*.js",
        "public/js/modules/**/*.js"
      ],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
} 